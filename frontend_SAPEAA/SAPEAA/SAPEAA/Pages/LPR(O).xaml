<Page x:Class="IMS.SAPEAAviews.LPR_O_"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.SAPEAAviews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LPR_O_">

    <Grid Background="#F2F8FC">

        <!-- MAIN BACKGROUND -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#B7E3F7" Offset="0"/>
                    <GradientStop Color="#7DD5EA" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle Opacity="0.10">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Assets/SAPEAA.png"
                            TileMode="Tile"
                            Stretch="Uniform"
                            Viewport="0,0,170,170"
                            ViewportUnits="Absolute"/>
            </Rectangle.Fill>
        </Rectangle>


        <!-- MAIN CONTENT -->
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- HEADER -->
                <RowDefinition Height="*"/>
                <!-- CONTENT -->
            </Grid.RowDefinitions>

            <!-- =============================== -->
            <!--        TOP HEADER PANEL         -->
            <!-- =============================== -->

            <Border Grid.Row="0" Background="White" Padding="6" BorderBrush="#D9D9D9" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- BACK BUTTON -->
                    <Button x:Name="LogoButton"
                            Grid.Column="0"
                            Width="40"
                            Height="40"
                            Margin="6"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="LogoButton_Click"
                            ToolTip="Go Back">
                        <Image Source="/Assets/back.png" Stretch="Uniform"/>
                    </Button>

                    <!-- CENTER: PAGE TITLE -->
                    <TextBlock Grid.Column="1"
                               Text="LP REQUISITION"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#1E6B83"/>

                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal"  Margin="1140,25,114,35">

                        <!-- Column Selector -->
                        <ComboBox x:Name="ColumnSelector"
              Width="150"
              Margin="5"
              SelectedIndex="0"/>

                        <!-- Search Box -->
                        <TextBox x:Name="SearchBox"
             Width="200"
             Margin="5"
             VerticalAlignment="Center"
          
             TextChanged="SearchBox_TextChanged"/>

                        <!-- Last X days -->
                        <ComboBox x:Name="DaysFilterBox"
              Width="120"
              Margin="5"
              SelectionChanged="DaysFilterBox_SelectionChanged">
                            <ComboBoxItem Content="All"/>
                            <ComboBoxItem Content="Last 7 Days"/>
                            <ComboBoxItem Content="Last 15 Days"/>
                            <ComboBoxItem Content="Last 30 Days"/>
                            <ComboBoxItem Content="Last 90 Days"/>
                        </ComboBox>

                    </StackPanel>


                    <!-- USER ROLE BADGE (RIGHT CORNER) -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                Margin="12,15,12,15"
                                Background="#E96C5F"
>

                        <Border Width="22" Height="22"
                                CornerRadius="15"
                                Background="White"
                                BorderBrush="#E96C5F"
                                BorderThickness="3"
                                VerticalAlignment="Center"
                                Margin="0,0,6,0">
                            <Image Source="/Assets/user.png"
                                   Width="12"
                                   Height="12"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                        </Border>

                        <TextBlock x:Name="HeaderRoleText"
                                   Text="MT"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="4,0"/>
                    </StackPanel>

                </Grid>
            </Border>


            <!-- ================================ -->
            <!--        CONTENT AREA              -->
            <!-- ================================ -->

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT BLUE SIDE LABEL -->
                <Border Grid.Column="0"
                        Background="#1E6B83"
                        Padding="10"
                        VerticalAlignment="Stretch">
                    <TextBlock Text="OUTS EQUIPMENTS"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Bold"/>
                </Border>

                <!-- RIGHT MAIN PANEL -->
                <DockPanel Grid.Column="1"
                           Margin="10"
                           LastChildFill="True"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch">

                    <!-- FOOTER BUTTONS -->
                    <Border DockPanel.Dock="Bottom"
                            Background="White"
                            Padding="10"
                            BorderBrush="#D9D9D9"
                            BorderThickness="0,1,0,0">

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">

                            <CheckBox x:Name="ExcelCheckbox"
                                      Content="Excel Pg"
                                      VerticalAlignment="Center"
                                      Margin="0,0,12,0"/>

                            <Button Content="Print DOS"
                                    Width="140" Height="38"
                                    Margin="6"
                                    Click="Print_DOS_Click"/>

                            <Button Content="Print Win"
                                    Width="140" Height="38"
                                    Margin="6"
                                    Click="Print_Win_Click"/>

                            <Button Content="Word"
                                    Width="140" Height="38"
                                    Margin="6"
                                    Click="Print_Word_Click"/>

                            <Button Content="Printer"
                                    Width="140" Height="38"
                                    Margin="6"
                                    Click="Print_Preview_Click"/>

                            <Button Content="Close"
                                    Width="140" Height="38"
                                    Margin="6"
                                    Click="Close_Click"/>

                        </StackPanel>
                    </Border>

                    <!-- TABLE CONTENT -->
                    <Border Background="White"
                            Padding="8"
                            CornerRadius="6"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch">

                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto">

                            <DataGrid x:Name="JobsGrid"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      HeadersVisibility="Column"
                                      SelectionMode="Single"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch"
                                      RowHeight="32"
                                      ColumnHeaderHeight="36">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Srl" Binding="{Binding Srl}" Width="Auto" MinWidth="80"/>
                                    <DataGridTextColumn Header="LPR No" Binding="{Binding Lpr_No}" Width="*" MinWidth="120"/>
                                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" MinWidth="120"/>
                                    <DataGridTextColumn Header="Indent No" Binding="{Binding Indent_No}" Width="*" MinWidth="120"/>
                                    <DataGridTextColumn Header="Job No/Comp Dt" Binding="{Binding Job_No_Comp_Dt}" Width="*" MinWidth="140"/>
                                    <DataGridTextColumn Header="OHS" Binding="{Binding Ohs}" Width="*" MinWidth="120"/>
                                    <DataGridTextColumn Header="Page" Binding="{Binding Page}" Width="Auto" MinWidth="80"/>
                                    <DataGridTextColumn Header="Part No" Binding="{Binding Part_No}" Width="*" MinWidth="120"/>
                                    <DataGridTextColumn Header="Nomen" Binding="{Binding Nomen}" Width="*" MinWidth="160"/>
                                    <DataGridTextColumn Header="Qty" Binding="{Binding Qty}" Width="Auto" MinWidth="60"/>
                                    <DataGridTextColumn Header="Recd" Binding="{Binding Recd}" Width="Auto" MinWidth="80"/>
                                    <DataGridTextColumn Header="SO" Binding="{Binding So}" Width="Auto" MinWidth="100"/>
                                    <DataGridTextColumn Header="SO Date" Binding="{Binding So_Date}" Width="*" MinWidth="120"/>
                                    <DataGridTextColumn Header="Vend" Binding="{Binding Vend}" Width="*" MinWidth="140"/>
                                    <DataGridTextColumn Header="Rate" Binding="{Binding Rate}" Width="Auto" MinWidth="80"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" MinWidth="120"/>
                                </DataGrid.Columns>


                            </DataGrid>
                        </ScrollViewer>
                    </Border>
                </DockPanel>
            </Grid>
        </Grid>

    </Grid>
</Page>
