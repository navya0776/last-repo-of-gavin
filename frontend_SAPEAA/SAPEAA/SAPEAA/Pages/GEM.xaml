<Page x:Class="IMS.SAPEAAviews.GEM"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.SAPEAAviews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GEM">

    <Grid>

        <!-- Background -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#B7E3F7" Offset="0"/>
                    <GradientStop Color="#7DD5EA" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Watermark -->
        <Rectangle Opacity="0.10">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Assets/SAPEAA.png"
                            TileMode="Tile"
                            Stretch="Uniform"
                            Viewport="0,0,170,170"
                            ViewportUnits="Absolute"/>
            </Rectangle.Fill>
        </Rectangle>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <!-- ================= HEADER ================= -->
            <Border Grid.Row="0" Background="White" Padding="6"
                    BorderBrush="#D9D9D9" BorderThickness="0,0,0,1">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- BACK BUTTON -->
                    <Button x:Name="LogoButton"
                            Grid.Column="0"
                            Width="40"
                            Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="LogoButton_Click">
                        <Image Source="/Assets/back.png"/>
                    </Button>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="SHORT ORDER"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#1E6B83"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <!-- RIGHT USER ROLE -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                Background="#E96C5F"
                                Margin="12,15">

                        <Border Width="22" Height="22"
                                CornerRadius="15"
                                Background="White"
                                BorderBrush="#E96C5F"
                                BorderThickness="3"
                                VerticalAlignment="Center"
                                Margin="0,0,6,0">
                            <Image Source="/Assets/user.png"
                                   Width="12" Height="12"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                        </Border>

                        <TextBlock x:Name="HeaderRoleText"
                                   Text="MT"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="14"/>
                    </StackPanel>
                </Grid>
            </Border>


            <!-- =============== SEARCH BAR =============== -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal"
                        Width="Auto"
                        Margin="0,60,0,0">

                <ComboBox x:Name="ColumnSelector"
                          Width="150"
                          Margin="5"/>

                <TextBox x:Name="SearchBox"
                         Width="200"
                         Margin="5"
                         TextChanged="SearchBox_TextChanged"/>

                <ComboBox x:Name="DaysFilterBox"
                          Width="150"
                          Margin="5"
                          SelectionChanged="DaysFilterBox_SelectionChanged">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="Last 7 Days"/>
                    <ComboBoxItem Content="Last 15 Days"/>
                    <ComboBoxItem Content="Last 30 Days"/>
                    <ComboBoxItem Content="Last 90 Days"/>
                </ComboBox>
            </StackPanel>



            <!-- ================= CONTENT ================= -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT MENU -->
                <Border Grid.Column="0" Background="#1E6B83" Padding="10">
                    <StackPanel>
                        <Button Content="SO >> GEM"
                                Margin="0,4"
                                Click="SO_All_Click"/>

                        <Button Content="SO >> NO"
                                Margin="0,4"
                                Click="SO_No_Click"/>
                    </StackPanel>
                </Border>


                <!-- RIGHT DATA -->
                <Border Grid.Column="1" Background="White" CornerRadius="6"
                        Padding="10" Margin="10">

                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">

                        <DataGrid x:Name="JobsGrid"
                                  AutoGenerateColumns="False"
                                  RowHeight="32"
                                  ColumnHeaderHeight="36"
                                  ItemsSource="{Binding}">
                            <!-- Columns will be loaded dynamically -->
                        </DataGrid>

                    </ScrollViewer>
                </Border>
            </Grid>

        </Grid>

    </Grid>
</Page>
