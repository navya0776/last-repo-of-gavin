{
  "version": 1,
  "disable_existing_loggers": true,
  "formatters": {
    "colored": {
      "()": "loggers.loggers.ColorFormatter"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "colored",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.FileHandler",
      "level": "WARNING",
      "formatter": "colored",
      "filename": "app.log",
      "mode": "w",
      "encoding": "utf-8"
    },
    "database": {
      "class": "loggers.loggers.MongoHandler",
      "level": "INFO",
      "uri": "mongodb://localhost:27017",
      "db_name": "ims",
      "collection": "logs"
    }
  },
  "loggers": {
    "audit_logs": {
      "level": "INFO",
      "handlers": [
        "database"
      ],
      "propagate": false
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": [
      "console",
      "file"
    ],
    "propagate": false
  }
}
