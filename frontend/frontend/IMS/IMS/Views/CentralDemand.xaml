<Page x:Class="IMS.Views.CentralDemand"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CentralDemand">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ScrollViewer  Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" >
            <DataGrid
          Grid.Column="0"
          Name="CDSDataGrid"
          AutoGenerateColumns="False"
          HeadersVisibility="Column"
          ColumnWidth="*"
           >
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#81B5F7"/>
                        <Setter Property="Foreground" Value="black"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="0.5"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Height" Value="60"/>
                        <Setter Property="FontFamily" Value="CorpSansRd" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="6">
                                        <TextBlock Text="{TemplateBinding Content}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Eqpt ID" Width="100"/>
                    <DataGridTextColumn Header="Eqpt Name" Width="200"/>
                    <DataGridTextColumn Header="Demand Qty" Width="100"/>
                    <DataGridTextColumn Header="Available Qty" Width="100"/>
                    <DataGridTextColumn Header="Required Date" Width="150"/>
                    <DataGridTextColumn Header="Status" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="2">
            <Button Content="Add Eqpt" Margin="5" Click="AddEqpt_Click" Style="{DynamicResource LedgerButtonStyle}" />
            <Button Content="Job Master" Margin="5" Style="{DynamicResource LedgerButtonStyle}" />
            <Button Content="Report" Margin="5" Style="{DynamicResource LedgerButtonStyle}"  />
            <Button Content="Close" Margin="5" Style="{DynamicResource LedgerButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>
