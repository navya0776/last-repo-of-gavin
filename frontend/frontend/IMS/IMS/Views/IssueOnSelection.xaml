<Page x:Class="IMS.Views.IssueOnSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IssueOnSelection" >

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="IssueDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="5">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#81B5F7"/>
                    <Setter Property="Foreground" Value="black"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Height" Value="50"/>
                    <Setter Property="FontFamily" Value="CorpSansRd" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridColumnHeader">
                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="6">
                                    <TextBlock Text="{TemplateBinding Content}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Equipment Name" Binding="{Binding EqName}" Width="200"/>
                <DataGridTextColumn Header="Equipment Code" Binding="{Binding EqCode}" Width="100"/>
                <DataGridTextColumn Header="Equipment SF" Binding="{Binding EqSf}" Width="*"/>
                <DataGridTextColumn Header="Ledger Page" Binding="{Binding LedgerPage}" Width="200"/>
                <DataGridTextColumn Header="Ledger Code" Binding="{Binding LedgerCode}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="5">
            <TextBlock Text="Eqpt" VerticalAlignment="Center" Margin="5,0,5,0"/>
            <TextBox x:Name="EqptTextBox" Width="150" Margin="5,0"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                <RadioButton x:Name="all" Content="All" />
                <RadioButton x:Name="Alive" Content="Alive"/>
                <RadioButton x:Name="Completed" Content="Completed " />
            </StackPanel>
            <Button Content="OK" Width="70" Height="30" Margin="10,0" Style="{DynamicResource LedgerButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>
