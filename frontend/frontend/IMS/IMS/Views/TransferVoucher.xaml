<Page x:Class="IMS.Views.TransferVoucher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TransferVoucher">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" >
            <TextBlock Text="Transfer Voucher options:" VerticalAlignment="Center" Margin="10,0,10,0" />
            <TextBlock Text="Ledger" VerticalAlignment="Center" Margin="10,0,10,0" />
            <ComboBox Width="180" Height="30">
                <ComboBoxItem />
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1" >
            <RadioButton Content="Serviceable to rep Col" Margin="10,5"/>
            <RadioButton Content="Repairable to ser Col" Margin="10,5"/>
            <RadioButton Content="Servicable item to different page in same Ledger" Margin="10,5"/>
            <RadioButton Content="Servicable items to different Ledger" Margin="10,5"/>
        </StackPanel>
        <DataGrid Grid.Row="1" Grid.Column="1"
                  x:Name="StoresDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="5">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#81B5F7"/>
                    <Setter Property="Foreground" Value="black"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="FontFamily" Value="CorpSansRd" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridColumnHeader">
                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="6">
                                    <TextBlock Text="{TemplateBinding Content}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Page" Binding="{Binding idx}" Width="Auto" />
                <DataGridTextColumn Header="Part No" Binding="{Binding ledger_page}" Width="*" />
                <DataGridTextColumn Header="Nomen" Binding="{Binding ohs_number}" Width="*" />
                <DataGridTextColumn Header="A_U" Binding="{Binding isg_number}" Width="*" />
                <DataGridTextColumn Header="Stk(rep)" Binding="{Binding ssg_number}" Width="*" />
                <DataGridTextColumn Header="Stk(ser)" Binding="{Binding ssg_number}" Width="*" />
                <DataGridTextColumn Header="Tfr Qty" Binding="{Binding ssg_number}" Width="*" />
            </DataGrid.Columns>
       
        </DataGrid>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <StackPanel Orientation="Horizontal"  Margin="5"  >
                <Button Content="Save Transfer" Width="100"  Margin="0,0,10,0" Style="{DynamicResource LedgerButtonStyle}" />
                <TextBlock Text="Go to page" Width="70" VerticalAlignment="Center" />
                <TextBox Width="60" Height="25" Margin="5,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Text="Scale" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox Width="60" Height="25" Margin="5,0,0,0" VerticalAlignment="Center"/>
                <Button Content="Select" Width="70" Margin="10,0,0,0" Style="{DynamicResource LedgerButtonStyle}"/>
                <Button Content="Search" Width="70" Margin="10,0,0,0" Style="{DynamicResource LedgerButtonStyle}"/>
                <Button Content="Cancel" Width="70" Margin="10,0,0,0" Style="{DynamicResource LedgerButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
