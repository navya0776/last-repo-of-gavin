<Page x:Class="IMS.Views.IssueOnSelection_Workorder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1100"
      Background="White"
      Title="IssueOnSelection_Workorder">

    <Grid Background="White" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" SelectionChanged="DataGrid_SelectionChanged" >
            <DataGrid.Columns>
                <DataGridCheckBoxColumn />
                <DataGridTextColumn Header="Job No"  />
                <DataGridTextColumn Header="Job Date"/>
                <DataGridTextColumn Header="Eqpt" />
                <DataGridCheckBoxColumn />
                <DataGridTextColumn Header="No Eqpt" />
                <DataGridTextColumn Header="No Comp" />
                <DataGridTextColumn Header="Date Comp" />
                <DataGridTextColumn Header="Item Dem" />
                <DataGridTextColumn Header="Full Iss"/>
                <DataGridTextColumn Header="Part Iss"/>
                <DataGridTextColumn Header="Nil Iss"/>
                <DataGridTextColumn Header="Bal Items"/>
                <DataGridTextColumn Header="Cancel/NR"/>
                <DataGridTextColumn Header="On LP"/>
                <DataGridTextColumn Header="Enq Placed"/>
                <DataGridTextColumn Header="SO Placed"/>
                <DataGridTextColumn Header="Recd Full" />
                <DataGridTextColumn Header="Recd Part" />
                <DataGridTextColumn Header="SO NR Cancel"/>
                <DataGridCheckBoxColumn Header="U/Prog"/>
                <DataGridTextColumn Header="MT_LP" />
                <DataGridTextColumn Header="ENGR_LP"/>
                <DataGridTextColumn Header="ORD_LP" />
                <DataGridTextColumn Header="TOTAL_LP"/>
                <DataGridTextColumn Header="LP Access Date"/>
                <DataGridTextColumn Header="Commit Type"/>
                <DataGridTextColumn Header="VIR1" />
                <DataGridTextColumn Header="VIR_DT1"/>
                <DataGridTextColumn Header="VIR DEM1"/>
                <DataGridTextColumn Header="VIR ISS1"/>
                <DataGridTextColumn Header="VIR2"/>
                <DataGridTextColumn Header="VIR_DT2"/>
                <DataGridTextColumn Header="VIR DEM2"/>
                <DataGridTextColumn Header="VIR ISS2"/>
                <DataGridTextColumn Header="VIR3"/>
                <DataGridTextColumn Header="VIR_DT3"/>
                <DataGridTextColumn Header="VIR DEM3"/>
                <DataGridTextColumn Header="VIR ISS3"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Center">
                <TextBlock Text="Commit type" VerticalAlignment="Center" />
                <ComboBox Width="100" Margin="7" >
                    <ComboBoxItem/>
                </ComboBox>
                <TextBlock Text="Eqpt" VerticalAlignment="Center" />
                <ComboBox Width="100" Margin="7" >
                    <ComboBoxItem/>
                </ComboBox>
                <Button x:Name="Completed" Content="Completed" Margin="7" Style="{DynamicResource LedgerButtonStyle}" />
                <Button x:Name="Alive" Content="Alive" Margin="7" Style="{DynamicResource LedgerButtonStyle}" />
                <Button x:Name="Target" Content="Target" Margin="7" Style="{DynamicResource LedgerButtonStyle}" />
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <RadioButton Content="Job No" Margin="2,0,0,0" />
                    <RadioButton Content="Job + Job data" Margin="2,0,0,0" />
                    <RadioButton Content="Comp Data"  Margin="2,0,0,0"/>
                    <RadioButton Content="Commit type" Margin="2,0,0,0"/>
                </StackPanel>
                <Button x:Name="Ok" Content="Ok" Width="71" Height="30" Margin="5,0,0,0" Style="{DynamicResource LedgerButtonStyle}" />
            </StackPanel>
            <Grid Grid.Column="1" Grid.Row="1">
                <HeaderedContentControl Header="Details of LP Transaction" FontSize="14" FontWeight="Medium" Foreground="Black" Background="#81B5F7" />

            </Grid>

        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Text="Pg" VerticalAlignment="Center" />
            <TextBox Width="20" Margin="5,10" />
            <TextBlock Text="to" VerticalAlignment="Center" />
            <TextBox Width="20" Margin="5,10" />
            <Button Content="DOS" Margin="2,10" Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Windows" Margin="2,10"  Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Export Excel" Margin="2,10" Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Add New Job" Margin="2,10" Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Add New Unit" Margin="2,10" Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Search" Margin="2,10" Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Master Demand" Margin="2,10" Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Verified Reqt List" Margin="2,10" Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Tgt" Margin="2,10" Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="O/P" Margin="2,10" Style="{DynamicResource LedgerButtonStyle}"/>
            <TextBlock Text="BA/EM No" VerticalAlignment="Center"/>
            <TextBox Width="50" Margin="2,10" />
            <TextBlock Text="Date" VerticalAlignment="Center" />
            <TextBox Width="50" Margin="2,10" />
            <TextBlock Text="to" VerticalAlignment="Center" />
            <TextBox Width="50" Margin="2,10" />
            <Button Content="Close" Margin="2,10" Style="{DynamicResource LedgerButtonStyle}"/>
        </StackPanel>



    </Grid>
</Page>
