<Window x:Class="IMS.Windows.AddLedgerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Ledger Entry"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Width="1100" Height="850"
        Background="#F5F7FB">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20" BorderBrush="#498CE3" BorderThickness="2">
            <StackPanel>
                <TextBlock Text="Add New Ledger Entry"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#2B4C7E"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <!-- Define plenty of rows -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ============ Row 1 ============ -->
                    <TextBlock Text="Ledger Page" Grid.Row="0" Grid.Column="0"/>
                    <TextBox x:Name="LedgerPage" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="OHS Number" Grid.Row="0" Grid.Column="2"/>
                    <TextBox x:Name="OHSNo" Grid.Row="0" Grid.Column="3" Margin="5"/>

                    <!-- ============ Row 2 ============ -->
                    <TextBlock Text="ISG Number" Grid.Row="1" Grid.Column="0"/>
                    <TextBox x:Name="ISGNo" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="SSG Number" Grid.Row="1" Grid.Column="2"/>
                    <TextBox x:Name="SSGNo" Grid.Row="1" Grid.Column="3" Margin="5"/>

                    <!-- ============ Row 3 ============ -->
                    <TextBlock Text="Part Number" Grid.Row="2" Grid.Column="0"/>
                    <TextBox x:Name="PartNo" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Nomenclature" Grid.Row="2" Grid.Column="2"/>
                    <TextBox x:Name="Nomen" Grid.Row="2" Grid.Column="3" Margin="5"/>

                    <!-- ============ Row 4 ============ -->
                    <TextBlock Text="A/U" Grid.Row="3" Grid.Column="0"/>
                    <TextBox x:Name="AU" Grid.Row="3" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="No Off" Grid.Row="3" Grid.Column="2"/>
                    <TextBox x:Name="NoOff" Grid.Row="3" Grid.Column="3" Margin="5"/>

                    <!-- ============ Row 5 ============ -->
                    <TextBlock Text="Scl Auth" Grid.Row="4" Grid.Column="0"/>
                    <TextBox x:Name="SclAuth" Grid.Row="4" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Unsv Stock" Grid.Row="4" Grid.Column="2"/>
                    <TextBox x:Name="UnsvStock" Grid.Row="4" Grid.Column="3" Margin="5"/>

                    <!-- ============ Row 6 ============ -->
                    <TextBlock Text="Rep Stock" Grid.Row="5" Grid.Column="0"/>
                    <TextBox x:Name="RepStock" Grid.Row="5" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Serv Stock" Grid.Row="5" Grid.Column="2"/>
                    <TextBox x:Name="ServStock" Grid.Row="5" Grid.Column="3" Margin="5"/>

                    <!-- ============ Row 7 ============ -->
                    <TextBlock Text="MSC" Grid.Row="6" Grid.Column="0"/>
                    <ComboBox x:Name="MSC" Grid.Row="6" Grid.Column="1" Margin="5">
                        <ComboBoxItem Content="M"/>
                        <ComboBoxItem Content="S"/>
                        <ComboBoxItem Content="C"/>
                    </ComboBox>

                    <TextBlock Text="VED" Grid.Row="6" Grid.Column="2"/>
                    <ComboBox x:Name="VED" Grid.Row="6" Grid.Column="3" Margin="5">
                        <ComboBoxItem Content="V"/>
                        <ComboBoxItem Content="E"/>
                        <ComboBoxItem Content="D"/>
                    </ComboBox>

                    <!-- ============ Row 8 ============ -->
                    <TextBlock Text="In House" Grid.Row="7" Grid.Column="0"/>
                    <ComboBox x:Name="InHouse" Grid.Row="7" Grid.Column="1" Margin="5">
                        <ComboBoxItem Content="in_house"/>
                        <ComboBoxItem Content="ORD"/>
                    </ComboBox>

                    <TextBlock Text="Bin Number" Grid.Row="7" Grid.Column="2"/>
                    <TextBox x:Name="BinNumber" Grid.Row="7" Grid.Column="3" Margin="5"/>

                    <!-- ============ Row 9 ============ -->
                    <TextBlock Text="Group" Grid.Row="8" Grid.Column="0"/>
                    <TextBox x:Name="Group" Grid.Row="8" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="COS Sec" Grid.Row="8" Grid.Column="2"/>
                    <TextBox x:Name="COSSec" Grid.Row="8" Grid.Column="3" Margin="5"/>

                    <!-- ============ Row 10 ============ -->
                    <TextBlock Text="Cab No" Grid.Row="9" Grid.Column="0"/>
                    <TextBox x:Name="CabNo" Grid.Row="9" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Old Page Ref" Grid.Row="9" Grid.Column="2"/>
                    <TextBox x:Name="OldPgRef" Grid.Row="9" Grid.Column="3" Margin="5"/>

                    <!-- ============ Row 11 ============ -->
                    <TextBlock Text="Assembly/Component" Grid.Row="10" Grid.Column="0"/>
                    <ComboBox x:Name="AssyComp" Grid.Row="10" Grid.Column="1" Margin="5">
                        <ComboBoxItem Content="Assy"/>
                        <ComboBoxItem Content="Comp"/>
                    </ComboBox>
                    <TextBlock Text="Re-Order Level" Grid.Row="10" Grid.Column="2"/>
                    <TextBox x:Name="ReOrdLvl" Grid.Row="10" Grid.Column="3" Margin="5"/>

                    <!-- ============ Row 12 ============ -->
                    <TextBlock Text="Safety Stock" Grid.Row="11" Grid.Column="0"/>
                    <TextBox x:Name="SafetyStock" Grid.Row="11" Grid.Column="1" Margin="5"/>
                </Grid>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Save"
                            Width="130" Height="40"
                            Background="#498CE3"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="Save_Click"
                            Margin="10,0"/>
                    <Button Content="Cancel"
                            Width="130" Height="40"
                            FontWeight="Bold"
                            Click="Cancel_Click"
                            Margin="10,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>
