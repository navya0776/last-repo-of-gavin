<Window x:Class="IMS.Windows.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password"
        Height="350" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FB">

    <Grid Margin="20">

        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Change Your Password"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 0 0 20"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Username" FontSize="14" FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameBox" Height="40" Margin="0 5 0 15"
                     IsEnabled="False"/>

            <TextBlock Text="New Password" FontSize="14" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox" Height="40" Margin="0 5 0 15"/>

            <TextBlock Text="Confirm Password" FontSize="14" FontWeight="SemiBold"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="40" Margin="0 5 0 20"/>

            <TextBlock x:Name="ErrorBlock"
                       Foreground="Red"
                       FontSize="14"
                       Visibility="Collapsed"
                       Margin="0 0 0 10"/>

            <Button Content="Update Password"
                    Height="45"
                    Background="#3A85FF"
                    Foreground="White"
                    FontSize="16"
                    Click="ChangePassword_Click"/>
        </StackPanel>
    </Grid>
</Window>
