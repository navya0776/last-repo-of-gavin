<Window x:Class="IMS.Windows.AccountsCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMS.Windows"
        mc:Ignorable="d"
        Title="AccountsCard" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions >
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock Text="Scale" VerticalAlignment="Center" Margin="5,0,0,0" />
                <TextBox Width="50" VerticalAlignment="Center"  Margin="5,0,0,0"/>
                <TextBlock Text="Page" VerticalAlignment="Center" Margin="5,0,0,0" />
                <TextBox Width="10" VerticalAlignment="Center"  Margin="5,0,0,0"/>
                <TextBox Width="50" VerticalAlignment="Center" Margin="5,0,0,0" />
                <TextBlock Text="Pt No" VerticalAlignment="Center" Margin="5,0,0,0" />
                <TextBox Width="50" VerticalAlignment="Center"  Margin="5,0,0,0"/>
                <TextBlock Text="Part No" VerticalAlignment="Center" Margin="5,0,0,0" />
                <TextBox Width="50" VerticalAlignment="Center"  Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Account Name" VerticalAlignment="Center" Margin="5,0,0,0" />
                <TextBox Width="200" VerticalAlignment="Center"  Margin="5,0,0,0"/>
                <TextBlock Text="Account No" VerticalAlignment="Center" Margin="5,0,0,0" />
                <TextBox Width="100" VerticalAlignment="Center"  Margin="5,0,0,0"/>
                <TextBlock Text="Address" VerticalAlignment="Center" Margin="5,0,0,0" />
                <TextBox Width="200" VerticalAlignment="Center"  Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
