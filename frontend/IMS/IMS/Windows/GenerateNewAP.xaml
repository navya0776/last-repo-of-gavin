<Window x:Class="IMS.Windows.GenerateNewAP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMS.Windows"
        mc:Ignorable="d"
        Title="GenerateNewAP" Height="636" Width="1357">

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#FF9E9E9E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Lbl" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="PinkBox" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Background" Value="#FFFF8FA0"/>
            <Setter Property="BorderBrush" Value="#FF8B8B8B"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="EllipsisBtn" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Content" Value="..."/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="NumBox" TargetType="TextBox">
            <EventSetter Event="PreviewTextInput" Handler="Numeric_PreviewTextInput"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TOP LINE -->
        <DockPanel Margin="0,0,0,8" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <TextBlock Text="Generate AP Demand From" FontSize="16" FontWeight="Bold"
                           Margin="0,0,18,0"/>
                <RadioButton x:Name="rbLedgerActs" Content="Ledger/Acts Card" IsChecked="True"
                             Margin="8,0"/>
                <RadioButton x:Name="rbOhs"       Content="OHS/SSG" Margin="18,0,0,0"/>
            </StackPanel>
        </DockPanel>

        <!-- MAIN FORM -->
        <GroupBox Header="Demand Details" Grid.ColumnSpan="2" Margin="0,29,0,0" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="155"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto" MinWidth="325"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="34"/>
                    <RowDefinition Height="34"/>
                    <RowDefinition Height="34"/>
                    <RowDefinition Height="34"/>
                    <RowDefinition Height="34"/>
                    <RowDefinition Height="34"/>
                    <RowDefinition Height="34"/>
                    <RowDefinition Height="34"/>
                    <RowDefinition Height="48"/>
                    <RowDefinition Height="34"/>
                    <RowDefinition Height="34"/>
                </Grid.RowDefinitions>

                <!-- Row 0: Equipment / AHQ / Fin Year -->
                <TextBlock Grid.Column="0" Style="{StaticResource Lbl}" Text="Equipment" />
                <DockPanel Grid.Row="0" Grid.Column="1">
                    <ComboBox x:Name="cmbEquipment"
                              MinWidth="230"
                              DisplayMemberPath="equipment_name"
                              SelectedValuePath="eqpt_code"
                              SelectedValue="{Binding Model.eqpt_code, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>

                <TextBlock Grid.Column="2" Style="{StaticResource Lbl}" Text="AHQ Srl" Margin="126,0,4,0"/>
                <TextBox x:Name="txtAhq"
                         Grid.Row="0" Grid.Column="3"
                         Style="{StaticResource PinkBox}" />

                <TextBlock Grid.Column="4" Style="{StaticResource Lbl}" Text="Fin Year" Margin="110,0,6,0"/>
                <ComboBox x:Name="cmbFinYear" Grid.Row="0" Grid.Column="5" Margin="10,1,175,0">
                    <ComboBoxItem>2025-2026</ComboBoxItem>
                    <ComboBoxItem IsSelected="True">2026-2027</ComboBoxItem>
                    <ComboBoxItem>2027-2028</ComboBoxItem>
                </ComboBox>

                <!-- Row 1: Store / Eqpt code / Eqpt name / Section -->
                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource Lbl}" Text="Store Code" />
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="txtStore" Width="44" />
                    <TextBlock Text="  Eqpt Code" VerticalAlignment="Center" Margin="6,0,6,0"/>
                    <TextBox x:Name="txtEqptCode" Width="60" Text="{Binding Model.eqpt_code}" />
                </StackPanel>

                <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource Lbl}" Text="Eqpt" Margin="147,0,5,0"/>
                <TextBox x:Name="txtEqpt" Grid.Row="1" Grid.Column="3" />

                <TextBlock Grid.Row="1" Grid.Column="4" Style="{StaticResource Lbl}" Text="Section"/>
                <TextBox x:Name="txtSection" Grid.Row="1" Grid.Column="5"/>

                <!-- Row 2: Make / Country / Ledger -->
                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource Lbl}" Text="Make"/>
                <TextBox x:Name="txtMake" Grid.Row="2" Grid.Column="1"/>

                <TextBlock Grid.Row="2" Grid.Column="2" Style="{StaticResource Lbl}" Text="Country" Margin="128,0,4,0"/>
                <TextBox x:Name="txtCountry" Grid.Row="2" Grid.Column="3"/>

                <TextBlock Grid.Row="2" Grid.Column="4" Style="{StaticResource Lbl}" Text="Ledger Code"/>
                <StackPanel Grid.Row="2" Grid.Column="5" Orientation="Horizontal">
                    <TextBox x:Name="txtLedgerCode" Width="50"/>
                    <TextBlock Text="  Ledger Name" VerticalAlignment="Center" Margin="6,0,6,0"/>
                    <TextBox x:Name="txtLedgerName" Width="130"/>
                    <Button Style="{StaticResource EllipsisBtn}" Click="LedgerPicker_Click"/>
                </StackPanel>

                <!-- Row 3: Scale/SSG ref / Scale issue -->
                <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource Lbl}" Text="Scale/SSG ref"/>
                <TextBox x:Name="txtScaleRef" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"/>

                <TextBlock Grid.Row="3" Grid.Column="4" Style="{StaticResource Lbl}" Text="Scale Issue No"/>
                <StackPanel Grid.Row="3" Grid.Column="5" Orientation="Horizontal">
                    <TextBox x:Name="txtScaleIssueNo" Width="80"/>
                    <TextBlock Text="  Date of Issue" VerticalAlignment="Center" Margin="6,0,6,0"/>
                    <DatePicker x:Name="dpScaleDate" Width="130"/>
                    <Button Style="{StaticResource EllipsisBtn}" Click="ScalePicker_Click"/>
                </StackPanel>

                <!-- Row 4: DemandAuth / Prefix / City -->
                <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource Lbl}" Text="Demand Auth"/>
                <TextBox x:Name="txtDemandAuth" Grid.Row="4" Grid.Column="1"/>

                <TextBlock Grid.Row="4" Grid.Column="2" Style="{StaticResource Lbl}" Text="Prefix" Margin="138,0,5,0"/>
                <TextBox Grid.Row="4" Grid.Column="3" Style="{StaticResource PinkBox}"
                         Text="SS/APD/BD8A12/ENGINE/" Width="180"/>

                <TextBlock Grid.Row="4" Grid.Column="4" Style="{StaticResource Lbl}" Text="City"/>
                <TextBox x:Name="txtCity" Grid.Row="4" Grid.Column="5"/>

                <!-- Row 5: AP demand date range / No. eqpt placed -->
                <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource Lbl}" Text="AP demand date range"/>
                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal">
                    <DatePicker x:Name="dpAPFrom" Width="118"/>
                    <TextBlock Text=" to " VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpAPTo" Width="118"/>
                </StackPanel>

                <TextBlock Grid.Row="5" Grid.Column="2" Style="{StaticResource Lbl}" Text="No of eqpt demand placed" Margin="18,0,10,0"/>
                <TextBox x:Name="txtNoEqptDemandPlaced" Grid.Row="5" Grid.Column="3"
                         Style="{StaticResource NumBox}" Text="0" Margin="73,0,73,0"/>

                <!-- Row 6: (you can later extend for more fields if you want) -->
                <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource Lbl}" Text="Remarks"/>
                <TextBox x:Name="txtRemarks" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="5"/>

                <!-- Row 8: Demand range / Assy -->
                <TextBlock Grid.Row="8" Grid.Column="0" Style="{StaticResource Lbl}" Text="Demand range"/>
                <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="txtRangeFrom" Width="64" Style="{StaticResource PinkBox}" Text="0"/>
                    <TextBlock Text="  to  " VerticalAlignment="Center"/>
                    <TextBox x:Name="txtRangeTo" Width="64" Style="{StaticResource PinkBox}" Text="0"/>
                </StackPanel>

                <TextBlock Grid.Row="8" Grid.Column="4" Style="{StaticResource Lbl}" Text="Assy/Component"/>
                <DockPanel Grid.Row="8" Grid.Column="5" Margin="10,0,119,0">
                    <TextBox x:Name="txtAssy" MinWidth="180" Width="175" Height="35"/>
                    <Button Style="{StaticResource EllipsisBtn}" DockPanel.Dock="Right" Click="AssyPicker_Click"/>
                </DockPanel>

                <!-- Row 9: Demand type / selection -->
                <StackPanel Grid.Row="9" Grid.ColumnSpan="6" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Demand type" VerticalAlignment="Center" FontWeight="Bold"/>
                    <RadioButton x:Name="rbDemandTypeAPD" Content="Adv. Prov. Demand" IsChecked="True" Margin="10,0"/>
                    <RadioButton x:Name="rbDemandTypeSPD" Content="Supplementary demand" Margin="10,0"/>

                    <TextBlock Text="   Selection" Margin="30,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
                    <RadioButton GroupName="sel" Content="All scaled item" IsChecked="True" Margin="10,0"/>
                    <RadioButton GroupName="sel" Content="On selection"/>
                </StackPanel>

            </Grid>
        </GroupBox>

        <!-- BOTTOM BUTTONS -->
        <Grid Grid.Row="2" Margin="0,10,0,0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Help" Width="90" Height="30" Grid.Column="0" HorizontalAlignment="Left"
                    Click="Help_Click"/>

            <Button Content="Ok"   Width="100" Height="30" Grid.Column="3"
                    Background="#FFDDEFE0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="100" Height="30" Grid.Column="5"
                    Background="#FFF0D7D7" Click="Cancel_Click"/>
        </Grid>
    </Grid>
</Window>
