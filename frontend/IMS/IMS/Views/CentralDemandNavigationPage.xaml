<Page x:Class="IMS.Views.CentralDemandNavigationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="1080"
      d:DesignWidth="1920"
      Title="CentralDemandNavigationPage">

    <Grid Background="#E5E5E5">

        <!-- Layout: Sidebar + Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>


        <!-- ⭐ HEADER BAR -->
        <Border Grid.Row="0" Grid.ColumnSpan="99" Background="#242D3C">
            <TextBlock Text="CENTRAL DEMAND NAVIGATION"
                       Foreground="White"
                       FontFamily="CorpSansRd"
                       FontWeight="Bold"
                       FontSize="24"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10"/>
        </Border>


        <!-- ⭐ LEFT PANEL (Improved) -->
        <Border Grid.Row="1" Grid.Column="0"
                Margin="10"
                Background="White"
                CornerRadius="8"
                BorderBrush="#D0D0D0"
                BorderThickness="1">

            <StackPanel Margin="10">

                <!-- JOB NO -->
                <TextBlock Text="Job No and Date"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,5"/>
                <ListBox ItemsSource="{Binding JobList}"
                         Background="#EAF4FF"
                         BorderBrush="#C4D7FF"
                         Height="120"
                         Margin="0,5"/>

                <!-- DEMAND NO -->
                <TextBlock Text="Demand No and Date"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,15,0,5"/>
                <ListBox ItemsSource="{Binding JobList}"
                         Background="#FFF2D9"
                         BorderBrush="#FFD8A8"
                         Height="120"
                         Margin="0,5"/>

                <!-- LPR -->
                <TextBlock Text="LPR Numbers"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,15,0,5"/>
                <ListBox ItemsSource="{Binding LPRList}"
                         Background="#FFE6F5"
                         BorderBrush="#FFB3DD"
                         Height="120"
                         Margin="0,5"/>

                <TextBlock Text="Stor IV     CDS IV     CRV"
                           FontWeight="Bold"
                           Margin="0,10"/>
                <ListBox ItemsSource="{Binding LPRList}"
                         Background="#E6FFF2"
                         BorderBrush="#A5FFD2"
                         Height="120"/>
            </StackPanel>
        </Border>



        <!-- ⭐ MAIN DATAGRID (UNCHANGED COLUMNS) -->
        <Border Grid.Row="1" Grid.Column="1"
                Margin="10"
                Background="White"
                CornerRadius="8"
                BorderBrush="#D0D0D0"
                BorderThickness="1">

            <DataGrid ItemsSource="{Binding LedgerRows}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      RowHeight="32"
                      AlternatingRowBackground="#F3FEF3"
                      HeadersVisibility="Column"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">

                <!-- HEADER STYLE ONLY (Not changing columns) -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#3B6FC4"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Height" Value="42"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- 💥 ALL ORIGINAL COLUMNS EXACTLY AS GIVEN -->
                <DataGrid.Columns>

                    <DataGridCheckBoxColumn Header="SEL" Binding="{Binding SEL}"/>
                    <DataGridTextColumn Header="Ledg Page" Binding="{Binding LedgPage}"/>
                    <DataGridTextColumn Header="OHS No" Binding="{Binding OHSNo}"/>
                    <DataGridTextColumn Header="Part Number" Binding="{Binding PartNo}"/>
                    <DataGridTextColumn Header="Spart_no" Binding="{Binding Spart_No}"/>
                    <DataGridTextColumn Header="Nomenclature" Binding="{Binding Nomen}"/>
                    <DataGridTextColumn Header="A_U" Binding="{Binding AU}"/>
                    <DataGridTextColumn Header="No Off" Binding="{Binding NoOff}"/>
                    <DataGridTextColumn Header="OHS Auth" Binding="{Binding OHSAuth}"/>
                    <DataGridTextColumn Header="Dem" Binding="{Binding Dem}"/>
                    <DataGridTextColumn Header="Addl Dem" Binding="{Binding AddlDem}"/>
                    <DataGridTextColumn Header="OSS Iss" Binding="{Binding OSSIss}"/>
                    <DataGridTextColumn Header="CDS Iss" Binding="{Binding CDSIss}"/>
                    <DataGridTextColumn Header="CDS Stk" Binding="{Binding CDSStk}"/>
                    <DataGridTextColumn Header="Job No" Binding="{Binding JobNo}"/>
                    <DataGridTextColumn Header="Job Date" Binding="{Binding JobDate}"/>
                    <DataGridTextColumn Header="Dem No" Binding="{Binding DemNo}"/>
                    <DataGridTextColumn Header="Dem dt" Binding="{Binding DemDt}"/>
                    <DataGridTextColumn Header="Addi DNo" Binding="{Binding AddiDno}"/>
                    <DataGridTextColumn Header="Addi dem dt " Binding="{Binding AddiDemdt}"/>
                    <DataGridCheckBoxColumn Header="LPR" Binding="{Binding LPR}"/>
                    <DataGridTextColumn Header="LPR Qty" Binding="{Binding LPRQty}"/>
                    <DataGridTextColumn Header="LPR No" Binding="{Binding LPRNo}"/>
                    <DataGridTextColumn Header="LPR dt" Binding="{Binding LPRdt}"/>
                    <DataGridTextColumn Header="Demand Ctrl No" Binding="{Binding DemandCtrlNo}"/>
                    <DataGridTextColumn Header="Demand Ctrl Date" Binding="{Binding DemandCtrlDate}"/>
                    <DataGridTextColumn Header="Curr Stk" Binding="{Binding CurrStk}"/>
                    <DataGridTextColumn Header="Now Issue" Binding="{Binding NowIssue}"/>
                    <DataGridTextColumn Header="Recd Qty" Binding="{Binding RecdQty}"/>
                    <DataGridTextColumn Header="Date NR" Binding="{Binding DateNR}"/>
                    <DataGridTextColumn Header="Qty(1)" Binding="{Binding Qty1}"/>
                    <DataGridTextColumn Header="OSS IV(1)" Binding="{Binding OSSIV1}"/>
                    <DataGridTextColumn Header="OSS IV_dt(1)" Binding="{Binding OSSIV_dt1}"/>
                    <DataGridTextColumn Header="Qty(2)" Binding="{Binding Qty2}"/>
                    <DataGridTextColumn Header="OSS IV(2)" Binding="{Binding OSSIV2}"/>
                    <DataGridTextColumn Header="OSS IV_dt(2)" Binding="{Binding OSSIV_dt2}"/>
                    <DataGridTextColumn Header="Qty(3)" Binding="{Binding Qty3}"/>
                    <DataGridTextColumn Header="OSS IV(3)" Binding="{Binding OSSIV3}"/>
                    <DataGridTextColumn Header="OSS IV_dt(3)" Binding="{Binding OSSIV_dt3}"/>
                    <DataGridTextColumn Header="CDS qt1" Binding="{Binding CDSqt1}"/>
                    <DataGridTextColumn Header="CDS IV(1)" Binding="{Binding CDSIV1}"/>
                    <DataGridTextColumn Header="CDS IV_dt(1)" Binding="{Binding CDSIV_dt1}"/>
                    <DataGridTextColumn Header="CDS qt2" Binding="{Binding CDSqt2}"/>
                    <DataGridTextColumn Header="CDS IV(2)" Binding="{Binding CDSIV2}"/>
                    <DataGridTextColumn Header="CDS IV_dt(2)" Binding="{Binding CDSIV_dt2}"/>
                    <DataGridTextColumn Header="CDS qt3" Binding="{Binding CDSqt3}"/>
                    <DataGridTextColumn Header="CDS IV(3)" Binding="{Binding CDSIV3}"/>
                    <DataGridTextColumn Header="CDS IV_dt(3)" Binding="{Binding CDSIV_dt3}"/>
                    <DataGridTextColumn Header="Dem ID" Binding="{Binding DemID}"/>

                </DataGrid.Columns>
            </DataGrid>
        </Border>



        <!-- ⭐ FOOTER BUTTONS -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="999"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text="Ledger" VerticalAlignment="Center" Margin="5"/>

            <ComboBox Width="120" Margin="5">
                <ComboBoxItem Content="Ledger 1"/>
                <ComboBoxItem Content="Ledger 2"/>
            </ComboBox>

            <Button Content="Generate CRV" Width="130" Margin="5"
                    Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="DRS" Width="80" Margin="5"
                    Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Open Ledger" Width="120" Margin="5"
                    Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Print Mst List" Width="140" Margin="5"
                    Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Save LPR" Width="110" Margin="5"
                    Style="{DynamicResource LedgerButtonStyle}"/>

            <TextBlock Text="Fin Head" VerticalAlignment="Center" Margin="5"/>

            <ComboBox Width="120" Margin="5">
                <ComboBoxItem Content="Head 1"/>
                <ComboBoxItem Content="Head 2"/>
            </ComboBox>

            <Button Content="Close" Width="110" Margin="5"
                    Click="Close_Click"
                    Style="{DynamicResource LedgerButtonStyle}"/>
        </StackPanel>

    </Grid>

</Page>
