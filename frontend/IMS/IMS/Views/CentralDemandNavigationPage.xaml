<Page x:Class="IMS.Views.CentralDemandNavigationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CentralDemandNavigationPage">

    <Grid Background="#F4F4F4" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <!-- Left panel -->
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <!-- Data sheet -->
        </Grid.ColumnDefinitions>

        <!-- Buttons row -->

        <!-- LEFT PANEL -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="1" Text="Job No AND Date" 
                   FontWeight="Bold" 
                   FontSize="10" Margin="10,5,10,195"/>

            <!-- JOB LIST -->
            <ListBox Grid.Row="1" ItemsSource="{Binding JobList}"
                 Background="#B2E1FF" Margin="10,20,10,0" />

            <StackPanel Grid.Row="2" Margin="10">
                <TextBlock Text="LPR Nos" FontWeight="Bold" FontSize="10"/>
                <ListBox x:Name="lprList" ItemsSource="{Binding LPRList}"
                     Background="#FF99C8" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="6" Height="141"/>
            </StackPanel>
            <TextBlock Grid.Row="1" Text="Dem No AND Date" 
                FontWeight="Bold" 
                FontSize="10" Margin="10,5,10,195" Grid.Column="1"/>
            <ListBox Grid.Row="1" ItemsSource="{Binding JobList}"
                Background="#B2E1FF" Margin="10,20,10,0" Grid.Column="1" />
            <ListBox x:Name="lprList_Copy" ItemsSource="{Binding LPRList}"
                    Background="#FF99C8" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="6" Grid.Column="1" Margin="10,24,10,50" Grid.Row="2"/>
            <TextBlock FontWeight="Bold" FontSize="10" Grid.Column="1" Margin="10,11,10,191" Grid.Row="2" Text="Stor IV    CDS IV       CRV"/>
        </Grid>


        <!-- MAIN DATAGRID -->
        <DataGrid Grid.Column="2"
              ItemsSource="{Binding LedgerRows}"
              AutoGenerateColumns="False"
              AlternatingRowBackground="#E8FEE8"
              IsReadOnly="True"
              Margin="10,10,0,30" 
                  HorizontalScrollBarVisibility="Visible" SelectionChanged="DataGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="SEL" Binding="{Binding PageNo}"/>
                <DataGridTextColumn Header="Ledg pPage" Binding="{Binding PartNo}"/>
                <DataGridTextColumn Header="OHS No" Binding="{Binding Nomenclature}"/>
                <DataGridTextColumn Header="Part Number" Binding="{Binding UOM}"/>
                <DataGridTextColumn Header="Spart_no" Binding="{Binding OH}"/>
                <DataGridTextColumn Header="Nomenclature" Binding="{Binding IND}"/>
                <DataGridTextColumn Header="A_U" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="No Off" Binding="{Binding DemandDate}"/>
                <DataGridTextColumn Header="OHS Auth" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Dem" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Addl Dem" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="OSS Iss" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="CDS Iss" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="CDS Stk" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Job No" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Job Date" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Dem No" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Dem dt" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Addi DNo" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Addi dem dt " Binding="{Binding Demand}"/>
                <DataGridCheckBoxColumn Header="LPR" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="LPR Qty" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="LPR No" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="LPR dt" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Demand Ctrl No" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Demand Ctrl Date" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Curr Stk" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Now Issue" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Recd Qty" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Date NR" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Qty(1)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="OSS IV(1)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="OSS IV_dt(1)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Qty(2)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="OSS IV(2)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="OSS IV_dt(2)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Qty(3)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="OSS IV(3)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="OSS IV_dt(3)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="CDS qt1" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="CDS IV(1)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="CDS IV_dt(1)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="CDS qt2" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="CDS IV(2)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="CDS IV_dt(2)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="CDS qt3" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="CDS IV(3)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="CDS IV_dt(3)" Binding="{Binding Demand}"/>
                <DataGridTextColumn Header="Dem ID" Binding="{Binding DemID}"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- BUTTONS -->
        <StackPanel Grid.ColumnSpan="999"  Orientation="Horizontal" 
                VerticalAlignment="Bottom">
            <TextBlock Text="Ledger" VerticalAlignment="Center" />
            <ComboBox Width="87" Margin="5">
                <ComboBoxItem Content="Ledger 1"/>
                <ComboBoxItem Content="Ledger 2"/>
            </ComboBox>
            <Button Content="Generate CRV" Margin="5" Width="87"/>
            <Button Content="DRS" Margin="5" Width="52"/>
            <TextBlock Text="Ledger" Margin="5" VerticalAlignment="Center" />
            <Button Content="Open Ledger" Margin="5"/>
            <Button Content="Print Mst List" Margin="5"/>
            <Button Content="Save LPR" Margin="5"/>
            <TextBlock Text="Fin Head" VerticalAlignment="Center" />
            <ComboBox Width="70" Margin="5">
                <ComboBoxItem Content="Head 1"/>
                <ComboBoxItem Content="Head 2"/>
            </ComboBox>
            <Button Content="Close" Margin="5" Width="75" Click="Close_Click"/>
        </StackPanel>
        <ListBox ItemsSource="{Binding JobList}"
            Background="#B2E1FF" Margin="10,20,145,215" />

    </Grid>


</Page>
