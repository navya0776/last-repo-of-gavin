<Page x:Class="IMS.Views.JobMaster"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="1024"
      d:DesignWidth="1600"
      Title="JobMaster">

    <Grid Background="#E5E5E5">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Area -->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="80"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- ⭐ LEFT SIDEBAR (same style as Ledger) -->
        <Border Grid.Row="1" Grid.Column="0"
                Grid.RowSpan="2"
                Margin="10"
                Background="White"
                CornerRadius="8"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                Padding="0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#3B6FC4" CornerRadius="8,8,0,0">
                    <TextBlock Text="Job Master"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="White"/>
                </Border>

                <!-- ACTIVE EQUIPMENT LIST -->
                <ScrollViewer Grid.Row="1">
                    <ItemsControl x:Name="ActiveEquipmentList"
                                  Margin="4">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="#333"
                                           FontWeight="SemiBold"
                                           Margin="4"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

            </Grid>
        </Border>


        <!-- ⭐ HEADER -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="99"
                   Background="#242D3C" LastChildFill="True">
            <TextBlock Text="JOB MASTER"
                       Foreground="White"
                       FontFamily="CorpSansRd"
                       FontWeight="Bold"
                       FontSize="24"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </DockPanel>


        <!-- ⭐ FILTER & SEARCH BAR (same as Ledger) -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.ColumnSpan="99"
                    Height="36"
                    Margin="10"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">

            <!-- FILTER BUTTON -->
            <Button Width="120" Height="30" Margin="0,0,6,0"
                    Background="White"
                    BorderBrush="#D0D3D8"
                    BorderThickness="1">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text=""
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               Margin="0,0,5,0"/>
                    <TextBlock Text="Filter" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <!-- SEARCH BOX -->
            <Grid Height="30" Width="250" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text=""
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="14"
                           Foreground="#999"
                           Margin="8,0,4,0"
                           VerticalAlignment="Center"/>

                <TextBox x:Name="SearchTextBox"
                    Grid.Column="1"
                         BorderThickness="0"
                         Padding="0"
                         VerticalAlignment="Center"
                         Background="Transparent"/>
            </Grid>

        </StackPanel>


        <!-- ⭐ MAIN DATAGRID AREA -->
        <Border Grid.Row="1" Grid.Column="1"
                Margin="10"
                Background="White"
                CornerRadius="8"
                BorderBrush="#D0D0D0"
                BorderThickness="1">

            <DataGrid x:Name="JobDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      RowHeight="35"
                      ColumnWidth="*"
                      HeadersVisibility="Column"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto">

                <!-- SAME HEADER STYLE AS LEDGER -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#3B6FC4"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Height" Value="50"/>
                        <Setter Property="FontFamily" Value="CorpSansRd"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Index" Binding="{Binding idx}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Ledger Page" Binding="{Binding ledger_page}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="OHS No" Binding="{Binding ohs_number}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="ISG No" Binding="{Binding isg_number}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="SSG No" Binding="{Binding ssg_number}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Part No" Binding="{Binding part_number}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="Nomenclature" Binding="{Binding nomenclature}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="A/U" Binding="{Binding a_u}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="No Off" Binding="{Binding no_off}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Scl Auth" Binding="{Binding scl_auth}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Unsv Stock" Binding="{Binding unsv_stock}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="Rep Stock" Binding="{Binding rep_stock}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="Serv Stock" Binding="{Binding serv_stock}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="MSC" Binding="{Binding msc}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="VED" Binding="{Binding ved}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="In-House" Binding="{Binding in_house}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="Bin No" Binding="{Binding bin_number}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Group" Binding="{Binding group}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="CDS Unsv" Binding="{Binding cds_unsv_stock}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="CDS Rep" Binding="{Binding cds_rep_stock}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="CDS Serv" Binding="{Binding cds_serv_stock}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="LPP" Binding="{Binding lpp}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Rate" Binding="{Binding rate}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Remarks" Binding="{Binding rmks}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="LPP Date" Binding="{Binding lpp_dt}" Width="Auto" FontSize="14" />

                </DataGrid.Columns>
            </DataGrid>

        </Border>


        <!-- ⭐ FOOTER BUTTONS (same as Ledger) -->
        <Grid Grid.Row="2" Grid.Column="1"
              Background="#F5F5F5"
              Grid.ColumnSpan="99">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Margin="60,0,0,0">

                <Button Content="Prev"
        Width="120" Height="40" Margin="10"
        Click="Prev_Click"
        Style="{DynamicResource LedgerButtonStyle}"/>

                <Button Content="Next"
        Width="120" Height="40" Margin="10"
        Click="Next_Click"
        Style="{DynamicResource LedgerButtonStyle}"/>

                <Button Content="Export Excel"
        Width="160" Height="40" Margin="10"
        Click="ExportExcel_Click"
        Style="{DynamicResource LedgerButtonStyle}"/>

                <Button Content="Close"
        Width="120" Height="40" Margin="10"
        Click="Close_Click"
        Style="{DynamicResource LedgerButtonStyle}"/>
            </StackPanel>

            <Button Content="Alert"
                    Width="120"
                    Height="40"
                    Margin="20"
                    Grid.Column="1"
                    Background="#FF5A5A"
                    Foreground="White"/>
        </Grid>

    </Grid>
</Page>
