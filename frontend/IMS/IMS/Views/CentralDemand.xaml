<Page x:Class="IMS.Views.CentralDemand"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CentralDemand">

    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!-- DataGrid -->
        <DataGrid x:Name="MasterGrid"
                  AutoGenerateColumns="False"
                  Margin="5"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  MouseDoubleClick="MasterGrid_MouseDoubleClick">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Ledger Code" Binding="{Binding ledger_code}" Width="*"/>
                <DataGridTextColumn Header="Eqpt Code" Binding="{Binding eqpt_code}" Width="*"/>
                <DataGridTextColumn Header="Ledger Name" Binding="{Binding ledger_name}" Width="*"/>
                <DataGridTextColumn Header="Head" Binding="{Binding head}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="Add Eqpt" Margin="5" Click="AddEqpt_Click"/>
            <Button Content="Job Master" Margin="5" Click="JobMaster_Click"/>
            <Button Content="Report" Margin="5"/>
            <Button Content="Close" Margin="5" Click="Close_Click"/>
        </StackPanel>

    </Grid>
</Page>
