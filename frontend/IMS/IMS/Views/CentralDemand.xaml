<Page x:Class="IMS.Views.CentralDemand"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CentralDemand">

    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <!-- DataGrid -->
        <DataGrid Grid.Row="0"
          Grid.Column="1"
          Name="MasterGrid"

          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          CanUserSortColumns="True"
          CanUserResizeRows="True"
          MouseDoubleClick="MasterGrid_MouseDoubleClick"

          IsReadOnly="True"       

            RowHeight="35"
          ColumnWidth="*"
          HeadersVisibility="Column"

          ScrollViewer.VerticalScrollBarVisibility="Visible"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.CanContentScroll="False"

            >

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3B6FC4"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Height" Value="60"/>

                    <Setter Property="FontFamily" Value="CorpSansRd" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridColumnHeader">
                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="6">
                                    <TextBlock Text="{TemplateBinding Content}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Ledger Code" Binding="{Binding ledger_code}" Width="*"/>
                <DataGridTextColumn Header="Eqpt Code" Binding="{Binding eqpt_code}" Width="*"/>
                <DataGridTextColumn Header="Ledger Name" Binding="{Binding ledger_name}" Width="*"/>
                <DataGridTextColumn Header="Head" Binding="{Binding head}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="Add Eqpt" Margin="5,0,5,0" Click="AddEqpt_Click" Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Job Master" Margin="5,0,5,0" Click="JobMaster_Click" Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Report" Margin="5,0" Style="{DynamicResource LedgerButtonStyle}"/>
            <Button Content="Close" Margin="5,0" Click="Close_Click" Style="{DynamicResource LedgerButtonStyle}"/>
        </StackPanel>

    </Grid>
</Page>
