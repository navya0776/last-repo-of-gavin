<Page x:Class="IMS.Views.AdminDashboatd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminDashboatd">

    <Grid Background="White" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE: USERS LIST -->
        <Border Grid.Column="0" BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Padding="10" Margin="5">
            <DockPanel>
                <TextBlock Text="Users" FontSize="28" FontWeight="Bold" Margin="0,0,0,10" DockPanel.Dock="Top"/>
                <ListBox x:Name="UsersList" SelectionChanged="UsersList_SelectionChanged" />
            </DockPanel>
        </Border>

        <!-- RIGHT SIDE: USER DETAILS + PERMISSIONS -->
        <Border Grid.Column="1" BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Padding="10" Margin="5">
            <StackPanel>
                <TextBlock Text="User Details" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Username:" Width="120"/>
                    <TextBlock x:Name="SelectedUsername" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Role Access:" Width="120"/>
                    <TextBox x:Name="SelectedRole" Width="200"/>
                </StackPanel>

                <TextBlock Text="Permissions" FontSize="18" Margin="0,15,0,5"/>
                <WrapPanel x:Name="PermissionsPanel" IsEnabled="False" />

                
                <Button Content="View Audit Logs" Width="150" Height="32" Margin="0,5,0,0" Click="ViewAuditLogs_Click"/>
                <DataGrid x:Name="AuditList"
          AutoGenerateColumns="False"
          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="User" Binding="{Binding username}" Width="150"/>
                        <DataGridTextColumn Header="Action" Binding="{Binding action}" Width="*"/>
                        <DataGridTextColumn Header="Details" Binding="{Binding details}" Width="300"/>
                        <DataGridTextColumn Header="When" Binding="{Binding timestamp}" Width="180"/>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>
        </Border>
    </Grid>
</Page>

