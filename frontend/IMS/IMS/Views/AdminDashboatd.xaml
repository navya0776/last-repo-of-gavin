<Page x:Class="IMS.Views.AdminDashboatd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F5F7FA">

    <Grid>

        <!-- TOP BAR -->
        <Border Background="#1F2A44" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Admin Dashboard"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="22"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- MAIN LAYOUT -->
        <Grid Margin="0,60,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <!-- Left Navigation -->
                <ColumnDefinition Width="*"/>
                <!-- Middle Panel -->
                <ColumnDefinition Width="480"/>
                <!-- Create User Panel -->
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL -->
            <Border Background="#4A90E2" Grid.Column="0">
                <StackPanel Margin="15">
                    <TextBlock Text="Users"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0 0 0 10"/>

                    <ListBox x:Name="UsersList"
                             Height="350"
                             Margin="0,0,0,10"
                             Background="White"
                             BorderThickness="0"
                             SelectionChanged="UsersList_SelectionChanged"/>

                    <Button Content="Refresh Users"
                            Click="RefreshUsers_Click"
                            Style="{StaticResource LedgerButtonStyle}"/>

                    <Button Content="Delete Selected User"
                            Margin="0,5,0,0"
                            Click="DeleteUser_Click"
                            Style="{StaticResource LedgerButtonStyle}"/>
                </StackPanel>
            </Border>


            <!-- USER DETAILS + AUDIT LOGS -->
            <ScrollViewer Grid.Column="1"
                          Padding="20"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel MaxWidth="650">

                    <TextBlock Text="User Details"
                               FontWeight="Bold"
                               FontSize="18"
                               Margin="0 0 0 15"/>

                    <Grid Margin="0 0 0 20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Username:" FontWeight="SemiBold"/>
                        <TextBlock x:Name="SelectedUsername" Grid.Column="1"/>

                        <TextBlock Text="Role:" Grid.Row="1" FontWeight="SemiBold"/>
                        <TextBlock x:Name="SelectedRole" Grid.Column="1" Grid.Row="1"/>
                    </Grid>

                    <TextBlock Text="Permissions"
                               FontWeight="Bold"
                               FontSize="16"/>

                    <StackPanel x:Name="PermissionsPanel"
                                Margin="0 10 0 30"/>

                    <Button Content="View Audit Logs"
                            Style="{StaticResource LedgerButtonStyle}"
                            Click="ViewAuditLogs_Click"/>

                    <ListBox x:Name="AuditList"
                             Height="150"
                             Margin="0 15 0 30"
                             Background="White"
                             BorderBrush="#DDD"/>

                    <Separator Margin="0 20 0 20"/>
                </StackPanel>
            </ScrollViewer>


            <!-- CREATE USER PANEL -->
            <ScrollViewer Grid.Column="2"
                          Padding="20"
                          VerticalScrollBarVisibility="Auto">

                <StackPanel MaxWidth="420">

                    <TextBlock Text="Create New User"
                               FontWeight="Bold"
                               FontSize="18"
                               Margin="0 0 0 15"/>

                    <TextBlock Text="Username"/>
                    <TextBox x:Name="NewUsernameInput"
                             Margin="0 5 0 10"/>

                    <TextBlock Text="Password"/>
                    <PasswordBox x:Name="NewPasswordInput"
                                 Margin="0 5 0 10"/>

                    <TextBlock Text="Role"/>
                    <ComboBox x:Name="RoleComboBox"
                              SelectedIndex="0"
                              Margin="0 5 0 10">
                        <ComboBoxItem Content="staff"/>
                        <ComboBoxItem Content="admin"/>
                    </ComboBox>

                    <TextBlock Text="Permissions"
                               FontWeight="Bold"
                               Margin="15 15 0 5"/>

                    <!-- Permissions Grid -->
                    <UniformGrid Columns="2"
                                 Rows="7"
                                 Margin="0 0 0 15">

                        <!-- Ledger -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Ledger" FontWeight="SemiBold"/>
                            <CheckBox x:Name="LedgerRead" Content="Read"/>
                            <CheckBox x:Name="LedgerWrite" Content="Write"/>
                        </StackPanel>

                        <!-- APD -->
                        <StackPanel Margin="5">
                            <TextBlock Text="APD" FontWeight="SemiBold"/>
                            <CheckBox x:Name="ApdRead" Content="Read"/>
                            <CheckBox x:Name="ApdWrite" Content="Write"/>
                        </StackPanel>

                        <!-- Overhaul -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Overhaul Scale" FontWeight="SemiBold"/>
                            <CheckBox x:Name="OverhaulRead" Content="Read"/>
                            <CheckBox x:Name="OverhaulWrite" Content="Write"/>
                        </StackPanel>

                        <!-- Receive -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Receive Voucher" FontWeight="SemiBold"/>
                            <CheckBox x:Name="RecieveRead" Content="Read"/>
                            <CheckBox x:Name="RecieveWrite" Content="Write"/>
                        </StackPanel>

                        <!-- Issue -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Issue Voucher" FontWeight="SemiBold"/>
                            <CheckBox x:Name="IssueRead" Content="Read"/>
                            <CheckBox x:Name="IssueWrite" Content="Write"/>
                        </StackPanel>

                        <!-- Indent -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Local Purchase Indent" FontWeight="SemiBold"/>
                            <CheckBox x:Name="LPIRead" Content="Read"/>
                            <CheckBox x:Name="LPIWrite" Content="Write"/>
                        </StackPanel>

                        <!-- Quotation -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Local Purchase Quotation" FontWeight="SemiBold"/>
                            <CheckBox x:Name="LPQRead" Content="Read"/>
                            <CheckBox x:Name="LPQWrite" Content="Write"/>
                        </StackPanel>

                        <!-- Received -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Local Purchase Received" FontWeight="SemiBold"/>
                            <CheckBox x:Name="LPRRead" Content="Read"/>
                            <CheckBox x:Name="LPRWrite" Content="Write"/>
                        </StackPanel>

                        <!-- Ordinance -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Local Purchase Ordinance" FontWeight="SemiBold"/>
                            <CheckBox x:Name="LPORead" Content="Read"/>
                            <CheckBox x:Name="LPOWrite" Content="Write"/>
                        </StackPanel>

                        <!-- LP Pay -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Local Purchase Pay" FontWeight="SemiBold"/>
                            <CheckBox x:Name="LPPayRead" Content="Read"/>
                            <CheckBox x:Name="LPPayWrite" Content="Write"/>
                        </StackPanel>

                        <!-- LP Query -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Local Purchase Query" FontWeight="SemiBold"/>
                            <CheckBox x:Name="LPQyRead" Content="Read"/>
                            <CheckBox x:Name="LPQyWrite" Content="Write"/>
                        </StackPanel>

                        <!-- CDS -->
                        <StackPanel Margin="5">
                            <TextBlock Text="CDS" FontWeight="SemiBold"/>
                            <CheckBox x:Name="CDSRead" Content="Read"/>
                            <CheckBox x:Name="CDSWrite" Content="Write"/>
                        </StackPanel>

                        <!-- Ammend -->
                        <StackPanel Margin="5">
                            <TextBlock Text="Local Purchase Amend" FontWeight="SemiBold"/>
                            <CheckBox x:Name="LPARead" Content="Read"/>
                            <CheckBox x:Name="LPAWrite" Content="Write"/>
                        </StackPanel>

                    </UniformGrid>

                    <Button Content="Create User"
                            Style="{StaticResource LedgerButtonStyle}"
                            Margin="0 15 0 0"
                            Click="SubmitNewUser_Click"/>

                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Grid>
</Page>
