<Page x:Class="IMS.Views.AdvanceProvisioning"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Background="#F6F8FB"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdvanceProvisioning">

    <Page.Resources>

        <!-- Beautiful Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="12,0,0,0"/>
        </Style>

        <!-- Improved DataGrid header -->
 

        <!-- Row hover + zebra striping -->
        <Style TargetType="DataGridRow">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="White"/>
           

            <Style.Triggers>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F2F6FF"/>
                </Trigger>

                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E4EEFF"/>
                </Trigger>

                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C7D8FF"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Better buttons -->
        <Style x:Key="FooterButton" TargetType="Button">
            <Setter Property="Background" Value="#3B6FC4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
         
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Top Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#242D3C" Padding="10">
            <TextBlock Text="Advance Provisioning" 
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- LEFT SIDE: EQUIPMENT LIST -->
        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="0"
                Margin="10"
                Background="White"
                CornerRadius="8"
                
                BorderThickness="2"
                BorderBrush="White"
                Padding="0"
                >

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Section header -->
                <Border Background="#3B6FC4" Grid.Row="0" CornerRadius="4,4,0,0">
                    <TextBlock Text="Equipment" Style="{StaticResource SectionHeader}"/>
                </Border>

                <!-- List -->
                <ListBox x:Name="Equipments"
                         Grid.Row="1"
                         Margin="0"
                         BorderThickness="0"
                         Background="White"
                         DisplayMemberPath="EquipmentName"
                         SelectionChanged="Equipments_SelectionChanged"/>
            </Grid>
        </Border>

        <!-- MAIN DataGrid -->
        <Border Grid.Row="1" Grid.Column="1"
                Grid.RowSpan="2"
                Margin="10"
                Background="White"
                CornerRadius="8"
                BorderBrush="#D0D0D0"
                BorderThickness="1">

            <DataGrid x:Name="LedgerDataGrid"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          CanUserReorderColumns="False"
          CanUserResizeRows="False"
          IsReadOnly="True"
          SelectionMode="Single"
          SelectionUnit="FullRow"
          HeadersVisibility="Column"
          ColumnHeaderHeight="34"
          FontSize="12"
          Margin="5"
          BorderThickness="0"
          RowBackground="White"
          AlternatingRowBackground="#F4F7FC"
          MouseDoubleClick="LedgerDataGrid_MouseDoubleClick">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#81B5F7"/>
                        <Setter Property="Foreground" Value="black"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="0.5"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Height" Value="60"/>
                        <Setter Property="FontFamily" Value="CorpSansRd" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                Padding="6">
                                        <TextBlock Text="{TemplateBinding Content}"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns                      
>
                    <DataGridTextColumn Header="Demand No" Binding="{Binding demand_no}" Width="100"/>
                    <DataGridTextColumn Header="Eqpt Code" Binding="{Binding eqpt_code}" Width="90"/>
                    <DataGridTextColumn Header="No Eqpt" Binding="{Binding no_equipment}" Width="80"/>
                    <DataGridTextColumn Header="Fin Year" Binding="{Binding fin_year}" Width="80"/>
                    <DataGridTextColumn Header="Dem Type" Binding="{Binding demand_type}" Width="90"/>
                    <DataGridTextColumn Header="Full Recd" Binding="{Binding full_received}" Width="80"/>
                    <DataGridTextColumn Header="Part Recd" Binding="{Binding part_received}" Width="80"/>
                    <DataGridTextColumn Header="Outs" Binding="{Binding outstanding}" Width="70"/>
                    <DataGridTextColumn Header="% Recd" Binding="{Binding percent_received}" Width="70"/>
                </DataGrid.Columns>

            </DataGrid>
        </Border>

        <!-- FOOTER -->
        <Border Grid.Row="3" Grid.ColumnSpan="2" Background="#F0F3F9" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <RadioButton Content="Select All" x:Name="SelectAllRadio"
                             Margin="20,0"
                             Checked="SelectAllRadio_Checked" VerticalAlignment="Center"/>
                <RadioButton Content="AP Demand" x:Name="APDemand"
                             Margin="20,0" VerticalAlignment="Center"
                             Checked="APDemand_Checked"/>
                <RadioButton Content="Supply Demand" x:Name="SupplyDemand"
                             Margin="20,0" VerticalAlignment="Center"
                             Checked="SupplyDemand_Checked"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                    <Button Content="Generate New"
                            Style="{StaticResource LedgerButtonStyle}"
                            Margin="0,0,10,0"
                            Click="Generate_Click"
                            VerticalAlignment="Center"
                            />
                    <Button Content="Demand Analysis"
                            Style="{StaticResource LedgerButtonStyle}"
                            Click="Analysis_Click"
                            />
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</Page>
