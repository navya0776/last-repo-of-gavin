<Page x:Class="IMS.Views.AdvanceProvisioning"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdvanceProvisioning">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="103*"/>
            <RowDefinition Height="267*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>


        <!-- Equipment -->
        <Grid Grid.Row="1" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" Background="#498CE3">
                <TextBlock Text="Equipment" FontSize="16" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </Grid>
            <ListBox x:Name="Equipments" SelectionChanged="Equipments_SelectionChanged" DisplayMemberPath="EquipmentName" Grid.Row="1" Margin="0,0,0,0" >
            </ListBox>
        </Grid>

        <!-- Header -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#498CE3">
            <TextBlock Text="Advance Provisioning" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <ComboBox x:Name="FilterCombo" Width="100" Margin="0,0,20,0"
          SelectionChanged="FilterCombo_SelectionChanged" HorizontalAlignment="Right" VerticalAlignment="Center" Background="Red" >
                <ComboBoxItem Content="All" IsSelected="True"/>
                <ComboBoxItem Content="Advanced Provision"/>
                <ComboBoxItem Content="Supply Demand"/>
            </ComboBox>

        </Grid>

        <!--Main Content-->
        <DataGrid Grid.Row="1" Grid.Column="1" Name="LedgerDataGrid"
                  Margin="5,0,0,0"
           AutoGenerateColumns="False"
           CanUserAddRows="False"
           CanUserResizeRows="False"
           HeadersVisibility="Column"
           Background="White"
           BorderBrush="Gray" BorderThickness="0,0,1,1"
           ColumnHeaderHeight="35"
           FontSize="12" Grid.RowSpan="2" >
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#498Ce3"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="10"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="Margin" Value="0,0,0,0" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns >

                    <DataGridTextColumn Header="Demand No" Binding="{Binding DemandNo}" Width="2*" />
                    <DataGridTextColumn Header="Eqpt Code" Binding="{Binding EquipmentCode}" Width="*" />
                    <DataGridTextColumn Header="Equipment" Binding="{Binding EquipmentName}" Width="2.5*" />
                    <DataGridTextColumn Header="No Eqpt" Binding="{Binding Quantity}" Width="*" />
                    <DataGridTextColumn Header="Fin Year" Binding="{Binding FinancialYear}" Width="1.5*" />
                    <DataGridTextColumn Header="Dem Type" Binding="{Binding DemandType}" Width="*" />
                    <DataGridTextColumn Header="Full Recd" Binding="{Binding FullReceived}" Width="*" />
                    <DataGridTextColumn Header="Part Recd" Binding="{Binding PartialReceived}" Width="*" />
                    <DataGridTextColumn Header="Outs" Binding="{Binding Outstanding}" Width="*" />
                    <DataGridTextColumn Header="% Recd" Binding="{Binding PercentageReceived}" Width="*" />
                    <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="*" />



            </DataGrid.Columns>

        </DataGrid>

        <!--Footer-->
        <Grid Grid.Row="3" Grid.ColumnSpan="2">

            <Button  x:Name="Report" Content="Report" Foreground="Black" Width="100" Height="30" Margin="-550,0,0,0" Style="{DynamicResource LedgerButtonStyle}" />
            <Button  x:Name="Generate" Content="Generate New" Foreground="Black" Width="100" Height="30" Margin="310,0,0,0" Style="{DynamicResource LedgerButtonStyle}" Click="Generate_Click" />
            <Button x:Name="Analysis" Content="Demand Analysis" Width="100" Height="30" Margin="550,0,0,0" Style="{DynamicResource LedgerButtonStyle}" Click="Analysis_Click" />


        </Grid>
        
        <!--generate-->
        <Grid Grid.Column="0" Grid.Row="0" x:Name="FormOverlay" Background="#AA000000" Visibility="Collapsed" Panel.ZIndex="999" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.RowSpan="999" Grid.ColumnSpan="999">
            <Border Background="White" CornerRadius="5" Padding="20" Margin="50" BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="GENERATE AP DEMAND FORM" FontWeight="SemiBold" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Border Grid.Column="1" Background="#E0E0E0" Padding="10,5" CornerRadius="3" Margin="10,0">
                                <TextBlock Text="Ledger/Acts Card" FontWeight="Bold" FontSize="14" Foreground="Red"/>
                            </Border>
                            <Border Grid.Column="2" Background="#E0E0E0" Padding="10,5" CornerRadius="3">
                                <TextBlock Text="OHS/SSG" FontWeight="Bold" FontSize="14" Foreground="Red"/>
                            </Border>
                        </Grid>

                        <StackPanel>
                            <Border Background="#F0F0F0" Padding="15" Margin="0,10,0,10" CornerRadius="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="EQUIPMENT" Grid.Row="0" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Margin="0,2,10,2"/>
                                    <TextBlock Text="AHQ Srl" Grid.Row="0" Grid.Column="2" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="3" Margin="0,2,10,2"/>
                                    <TextBlock Text="Fin Year" Grid.Row="0" Grid.Column="4" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="5" Margin="0,2,0,2"/>

                                    <TextBlock Text="STORE CODE" Grid.Row="1" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Margin="0,2,10,2"/>
                                    <TextBlock Text="EQP CODE" Grid.Row="1" Grid.Column="2" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="3" Margin="0,2,10,2"/>
                                    <TextBlock Text="EQPT" Grid.Row="1" Grid.Column="4" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="5" Margin="0,2,0,2"/>

                                    <TextBlock Text="SECTION" Grid.Row="2" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Margin="0,2,10,2"/>
                                    <TextBlock Text="MAKE" Grid.Row="2" Grid.Column="2" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="2" Grid.Column="3" Margin="0,2,10,2"/>
                                    <TextBlock Text="COUNTRY" Grid.Row="2" Grid.Column="4" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="2" Grid.Column="5" Margin="0,2,0,2"/>

                                    <TextBlock Text="LEDGER CODE" Grid.Row="3" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="3" Grid.Column="1" Margin="0,2,10,2"/>
                                    <TextBlock Text="LEDGER NAME" Grid.Row="3" Grid.Column="2" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="3" Grid.Column="3" Margin="0,2,10,2"/>
                                    <TextBlock Text="SCALE/ISS Ref" Grid.Row="3" Grid.Column="4" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="3" Grid.Column="5" Margin="0,2,0,2"/>

                                    <TextBlock Text="Scale Issue No" Grid.Row="4" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="4" Grid.Column="1" Margin="0,2,10,2"/>
                                    <TextBlock Text="Date Of Issue" Grid.Row="4" Grid.Column="2" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="4" Grid.Column="3" Margin="0,2,10,2"/>
                                    <TextBlock Text="No Of Eqpt In OS/SSG" Grid.Row="4" Grid.Column="4" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="4" Grid.Column="5" Margin="0,2,0,2"/>
                                </Grid>
                            </Border>

                            <Border Background="#F0F0F0" Padding="15" Margin="0,10,0,10" CornerRadius="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Demand Auth" Grid.Row="0" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Margin="0,2,10,2"/>
                                    <TextBlock Text="Prefix" Grid.Row="0" Grid.Column="2" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="3" Margin="0,2,0,2"/>

                                    <TextBlock Text="Depot" Grid.Row="1" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Margin="0,2,10,2"/>
                                    <TextBlock Text="City" Grid.Row="1" Grid.Column="2" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="3" Margin="0,2,0,2"/>

                                    <TextBlock Text="Address" Grid.Row="2" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,2,0,2"/>
                                </Grid>
                            </Border>

                            <Border Background="#F0F0F0" Padding="15" Margin="0,10,0,10" CornerRadius="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="AP Demand Data Range" Grid.Row="0" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Margin="0,2,5,2"/>
                                    <TextBlock Text="To" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,15,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Margin="30,2,0,2" HorizontalAlignment="Right" Width="90"/>
                                    <TextBlock Text="No Of Eqpt Demand Placed" Grid.Row="0" Grid.Column="2" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="3" Margin="0,2,0,2"/>

                                    <TextBlock Text="Issue Date Range" Grid.Row="1" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Margin="0,2,5,2"/>
                                    <TextBlock Text="To" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,15,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Margin="30,2,0,2" HorizontalAlignment="Right" Width="90"/>
                                    <TextBlock Text="No Of Eqpt Completed" Grid.Row="1" Grid.Column="2" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="3" Margin="0,2,0,2"/>
                                </Grid>
                            </Border>

                            <Border Background="#F0F0F0" Padding="15" Margin="0,10,0,10" CornerRadius="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="Demand No" Grid.Row="0" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Margin="0,2,5,2"/>
                                    <TextBlock Text="Dt" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,15,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Margin="30,2,0,2" HorizontalAlignment="Right" Width="90"/>
                                    <TextBlock Text="No Of Eqpt For Spare Demand" Grid.Row="0" Grid.Column="2" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="0" Grid.Column="3" Margin="0,2,0,2"/>

                                    <TextBlock Text="Demand Range" Grid.Row="1" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Margin="0,2,5,2"/>
                                    <TextBlock Text="To" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,15,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Margin="30,2,0,2" HorizontalAlignment="Right" Width="90"/>
                                    <TextBlock Text="No Of Eqpt Out For Repair" Grid.Row="1" Grid.Column="2" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="1" Grid.Column="3" Margin="0,2,0,2"/>

                                    <TextBlock Text="Demand Index" Grid.Row="2" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="2" Grid.Column="1" Margin="0,2,10,2"/>
                                    <TextBlock Text="Demand Type" Grid.Row="3" Grid.Column="0" Margin="0,5,10,5"/>
                                    <TextBox Grid.Row="3" Grid.Column="1" Margin="0,2,10,2"/>

                                    <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,2,0,2">
                                        <TextBlock Text="Ledge Page" Margin="0,0,5,0" Foreground="Red"/>
                                        <TextBox Width="80"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,2,0,2">
                                        <TextBlock Text="OS/SSG" Margin="0,0,5,0" Foreground="Red"/>
                                        <TextBox Width="80"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,2,0,2">
                                        <TextBlock Text="Assy/Component" Margin="0,0,5,0" Foreground="Red"/>
                                        <TextBox Width="150"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Ok" Width="80" Height="30" Margin="0,0,10,0"/>
                            <Button Content="Cancel" Width="80" Height="30"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
 


    </Grid>
</Page>
