<Page x:Class="IMS.Views.Ledger"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1591"
      Title="Ledger">
    <Grid Background="#E5E5E5" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Stores Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Ledger Main Area -->
        </Grid.ColumnDefinitions>

        <!-- Main Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Table -->
            <RowDefinition Height="80"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- LEFT SIDEBAR: Stores -->


        <!-- Example store buttons -->
        <!-- LEFT SIDEBAR: Stores -->
        <!-- LEDGER TREEVIEW PANEL -->
        <Border Grid.Row="1" Grid.Column="0"
                Grid.RowSpan="2"
        Margin="10"
        Background="White"
        CornerRadius="8"
        BorderBrush="#D0D0D0"
        BorderThickness="1"
        Padding="0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- SIDEBAR TITLE -->
                <Border Background="#3B6FC4"
                CornerRadius="8,8,0,0"
                Grid.Row="0">
                    <TextBlock Text="Ledger"
                       FontSize="22"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="White"/>
                </Border>

                <!-- YOUR STORE → SUBSTORE TREEVIEW -->
                <TreeView x:Name="StoresTree"
                  Grid.Row="1"
                  Background="White"
                  BorderThickness="0"
                  SelectedItemChanged="StoresTree_SelectedItemChanged">

                    <TreeView.Resources>

                        <!-- Store node style -->
                        <Style TargetType="TreeViewItem">
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="6"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Foreground" Value="#444"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TreeViewItem">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Expander arrow -->
                                            <ToggleButton x:Name="Expander"
                                                  ClickMode="Press"
                                                 
                                                  IsChecked="{Binding IsExpanded,
                                                    RelativeSource={RelativeSource TemplatedParent}}"/>

                                            <!-- Header -->
                                            <Border x:Name="Bd"
                                            Grid.Column="1"
                                            Background="White"
                                            CornerRadius="4"
                                            Padding="4">
                                                <ContentPresenter x:Name="PART_Header"
                                                          ContentSource="Header"/>
                                            </Border>

                                            <!-- Children -->
                                            <ItemsPresenter x:Name="ItemsHost"
                                                    Grid.Column="1"
                                                    Margin="26,2,2,2"/>
                                        </Grid>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd"
                                                Property="Background"
                                                Value="#EEF4FF"/>
                                            </Trigger>

                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd"
                                                Property="Background"
                                                Value="#D9E6FF"/>
                                                <Setter TargetName="Bd"
                                                Property="BorderBrush"
                                                Value="#3B6FC4"/>
                                            </Trigger>

                                            <Trigger Property="HasItems" Value="False">
                                                <Setter TargetName="Expander"
                                                Property="Visibility"
                                                Value="Hidden"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>

                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <!-- Expander Triangle -->
                        <Style x:Key="ToggleStyle" TargetType="ToggleButton">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid Width="14" Height="14">
                                            <Path x:Name="Arrow"
                                          Fill="#666"
                                          Data="M 4 6 L 10 6 L 7 10 Z"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Arrow"
                                                Property="RenderTransform">
                                                    <Setter.Value>
                                                        <RotateTransform Angle="90"
                                                                 CenterX="7"
                                                                 CenterY="7"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>

                    </TreeView.Resources>
                </TreeView>

            </Grid>
        </Border>


        <!-- HEADER -->
        <DockPanel Grid.Row="0" Background="#242D3C" LastChildFill="True" Grid.ColumnSpan="99"  >

            <TextBlock Text="LEDGER MAINTAINANCE"
                   Foreground="White"
                       FontFamily="CorpSansRd"
                   FontWeight="Bold"
                   FontSize="24"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0" HorizontalAlignment="Center"/>


        </DockPanel>
<!--        
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
        <ComboBox x:Name="ColumnSelector"
              Width="150"
              Margin="0,0,10,0" 
             SelectionChanged="ColumnSelector_SelectionChanged"/>

        <TextBox x:Name="SearchBox"
             Width="200"
             Margin="0,0,10,0"
              />

        <Button Content="Search" Margin="0,0,0,0"
            Width="120"
            Click="Search_Click" Style="{DynamicResource SearchButtonStyle}"
             />


        <Button Content="Clear"
            Width="120"
            Margin="10,0,0,0"
            Click="Clear_Click" Style="{DynamicResource SearchButtonStyle}"/>
        </StackPanel>
-->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.ColumnSpan="99"
            
             Height="36"
             Margin="10"
             VerticalAlignment="Center"
             HorizontalAlignment="Right"
             >
            <!-- Filter Button -->
            <Grid>
            <Button Width="120" Height="30"
            Margin="0,0,6,0"
            Background="White"
            BorderBrush="#D0D3D8"
            BorderThickness="1"
            Click="FilterButton_Click"

            HorizontalAlignment="Left"
            VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="" 
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="14"
                       Margin="0,0,5,0"
                       VerticalAlignment="Center"/>
            <TextBlock Text="Filter"
                       Foreground="#444"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
        </StackPanel>
            </Button>
                <Popup x:Name="FilterPopup"
           PlacementTarget="{Binding ElementName=FilterButton}"
           Placement="Bottom"
           StaysOpen="False">
                    <Border Background="White" BorderBrush="#D0D3D8" BorderThickness="1" CornerRadius="4" Padding="6">
                        <ComboBox x:Name="ColumnSelector" Width="150" Height="28" SelectionChanged="ColumnSelector_SelectionChanged">

                        </ComboBox>
                    </Border>
                </Popup>

            </Grid>
            <!-- Search Box -->
            <Grid Height="30"
          VerticalAlignment="Center"
          Background="White"
          Width="250"
   
          >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Search icon -->
                <TextBlock Text=""
                   FontFamily="Segoe MDL2 Assets"
                   FontSize="14"
                   Foreground="#999"
                   Margin="8,0,4,0"
                   VerticalAlignment="Center"/>

                <!-- Search TextBox -->
                <TextBox Grid.Column="1"
                 x:Name="SearchTextBox"
                 BorderThickness="0"
                 FontSize="14"
                 Padding="0"
                 VerticalAlignment="Center"
                 Background="Transparent"
                 Foreground="#333"
                         TextChanged="SearchBox_TextChanged"
                  />
            </Grid>
        </StackPanel>


        <!-- DATA GRID (AUTO WIDTH COLUMNS) -->
        <DataGrid Grid.Row="1"
          Grid.Column="1"
          Name="LedgerDataGrid"

          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          CanUserSortColumns="True"
          CanUserResizeRows="True"

          IsReadOnly="True"       

            RowHeight="35"
          ColumnWidth="*"
          HeadersVisibility="Column"
          EnableRowVirtualization="True"
          EnableColumnVirtualization="True"
          VirtualizingPanel.ScrollUnit="Pixel"


          ScrollViewer.VerticalScrollBarVisibility="Visible"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          ScrollViewer.CanContentScroll="False"

            PreviewMouseWheel="LedgerDataGrid_PreviewMouseWheel">


            <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#3B6FC4"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="0.5"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Height" Value="60"/>
          
                        <Setter Property="FontFamily" Value="CorpSansRd" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="6">
                                        <TextBlock Text="{TemplateBinding Content}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Index" Binding="{Binding idx}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Ledger Page" Binding="{Binding ledger_page}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="OHS No" Binding="{Binding ohs_number}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="ISG No" Binding="{Binding isg_number}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="SSG No" Binding="{Binding ssg_number}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Part No" Binding="{Binding part_number}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="Nomenclature" Binding="{Binding nomenclature}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="A/U" Binding="{Binding a_u}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="No Off" Binding="{Binding no_off}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Scl Auth" Binding="{Binding scl_auth}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Unsv Stock" Binding="{Binding unsv_stock}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="Rep Stock" Binding="{Binding rep_stock}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="Serv Stock" Binding="{Binding serv_stock}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="MSC" Binding="{Binding msc}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="VED" Binding="{Binding ved}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="In-House" Binding="{Binding in_house}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="Bin No" Binding="{Binding bin_number}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Group" Binding="{Binding group}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="CDS Unsv" Binding="{Binding cds_unsv_stock}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="CDS Rep" Binding="{Binding cds_rep_stock}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="CDS Serv" Binding="{Binding cds_serv_stock}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="LPP" Binding="{Binding lpp}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Rate" Binding="{Binding rate}" Width="Auto" FontSize="14"/>
                    <DataGridTextColumn Header="Remarks" Binding="{Binding rmks}" Width="Auto" FontSize="14" />
                    <DataGridTextColumn Header="LPP Date" Binding="{Binding lpp_dt}" Width="Auto" FontSize="14" />
                </DataGrid.Columns>
            </DataGrid>


        <!-- FOOTER BUTTONS -->
        <Grid Grid.Row="3" Grid.Column="1"  Background="#F5F5F5" Grid.ColumnSpan="99">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT BUTTONS -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="60,0,0,0" >
                <Button Content="Update Page" Width="120" Height="40" Margin="10" Style="{DynamicResource LedgerButtonStyle}" Click="Update_Click"/>
                <Button x:Name="Add"  Content="Add Page" Height="40"  Width="120" Margin="10" Style="{DynamicResource LedgerButtonStyle}" Click="Add_Click"/>
                <Button Content="Export To Excel" Width="120" Height="40"  Margin="10" Style="{DynamicResource LedgerButtonStyle}" Click="ExportToXlsx_Click"/>
                <Button Content="Current Stock" Width="120 " Height="40"  Margin="10" Style="{DynamicResource LedgerButtonStyle}" />
                <Button x:Name="Reports" Content="Reports" Height="40"  Width="120" Margin="10" Style="{DynamicResource LedgerButtonStyle}" Click="Reports_Click"/> 
            </StackPanel>

            <!-- ALERT BUTTON (RIGHT SIDE) -->
            <Button Content="Alert" Height="40" Width="120" Margin="5,10,20,10"
            Grid.Column="1"
            Background="#FF5A5A" Foreground="White" Style="{DynamicResource LedgerButtonStyle}" />

        </Grid>

    </Grid>
</Page>
