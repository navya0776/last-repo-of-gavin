<Page x:Class="IMS.Views.Ledger"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1591"
      Title="Ledger">
    <Grid Background="#E5E5E5" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Stores Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Ledger Main Area -->
        </Grid.ColumnDefinitions>

        <!-- Main Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="50"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Table -->
            <RowDefinition Height="80"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- LEFT SIDEBAR: Stores -->


        <!-- Example store buttons -->
        <!-- LEFT SIDEBAR: Stores -->
        <TreeView 
    x:Name="StoresTree"
    Grid.Row="2"
            Grid.ColumnSpan="32"
    Grid.Column="0"
    Background="#498CE3"
    BorderThickness="1"
    BorderBrush="Gray"
    SelectedItemChanged="StoresTree_SelectedItemChanged">
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="Foreground" Value="white"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>


        <!-- HEADER -->
        <DockPanel Grid.Row="0" Background="#242D3C" LastChildFill="True" Grid.ColumnSpan="99"  >
            <TextBlock Text="LEDGER MAINTAINANCE"
                   Foreground="White"
                       FontFamily="CorpSansRd"
                   FontWeight="Bold"
                   FontSize="24"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0" HorizontalAlignment="Center"/>



        </DockPanel>
<!--        
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
        <ComboBox x:Name="ColumnSelector"
              Width="150"
              Margin="0,0,10,0" 
             SelectionChanged="ColumnSelector_SelectionChanged"/>

        <TextBox x:Name="SearchBox"
             Width="200"
             Margin="0,0,10,0"
              />

        <Button Content="Search" Margin="0,0,0,0"
            Width="120"
            Click="Search_Click" Style="{DynamicResource SearchButtonStyle}"
             />


        <Button Content="Clear"
            Width="120"
            Margin="10,0,0,0"
            Click="Clear_Click" Style="{DynamicResource SearchButtonStyle}"/>
        </StackPanel>
-->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Grid.ColumnSpan="99"
            
             Height="36"
             Margin="10"
             VerticalAlignment="Center"
             HorizontalAlignment="Right"
             >
            <!-- Filter Button -->
            <Grid>
            <Button Width="120" Height="30"
            Margin="0,0,6,0"
            Background="White"
            BorderBrush="#D0D3D8"
            BorderThickness="1"
            Click="FilterButton_Click"

            HorizontalAlignment="Left"
            VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="" 
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="14"
                       Margin="0,0,5,0"
                       VerticalAlignment="Center"/>
            <TextBlock Text="Filter"
                       Foreground="#444"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
        </StackPanel>
            </Button>
                <Popup x:Name="FilterPopup"
           PlacementTarget="{Binding ElementName=FilterButton}"
           Placement="Bottom"
           StaysOpen="False">
                    <Border Background="White" BorderBrush="#D0D3D8" BorderThickness="1" CornerRadius="4" Padding="6">
                        <ComboBox x:Name="ColumnSelector" Width="150" Height="28" SelectionChanged="ColumnSelector_SelectionChanged">

                        </ComboBox>
                    </Border>
                </Popup>

            </Grid>
            <!-- Search Box -->
            <Grid Height="30"
          VerticalAlignment="Center"
          Background="White"
          Width="250"
   
          >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Search icon -->
                <TextBlock Text=""
                   FontFamily="Segoe MDL2 Assets"
                   FontSize="14"
                   Foreground="#999"
                   Margin="8,0,4,0"
                   VerticalAlignment="Center"/>

                <!-- Search TextBox -->
                <TextBox Grid.Column="1"
                 x:Name="SearchTextBox"
                 BorderThickness="0"
                 FontSize="14"
                 Padding="0"
                 VerticalAlignment="Center"
                 Background="Transparent"
                 Foreground="#333"
                         TextChanged="SearchBox_TextChanged"
                  />
            </Grid>
        </StackPanel>


        <!-- DATA GRID (AUTO WIDTH COLUMNS) -->
        <ScrollViewer  Grid.Row="2" Grid.Column="1" VerticalScrollBarVisibility="Auto" >
            <DataGrid Grid.Row="1"
          Grid.Column="1"
          Name="LedgerDataGrid"
          AutoGenerateColumns="False"
          HeadersVisibility="Column"
          ColumnWidth="*"
          SelectionChanged="LedgerDataGrid_SelectionChanged">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#81B5F7"/>
                        <Setter Property="Foreground" Value="black"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="0.5"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Height" Value="60"/>
                        <Setter Property="FontFamily" Value="CorpSansRd" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="6">
                                        <TextBlock Text="{TemplateBinding Content}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Index" Binding="{Binding idx}" Width="Auto" />
                    <DataGridTextColumn Header="Ledger Page" Binding="{Binding ledger_page}" Width="*" />
                    <DataGridTextColumn Header="OHS No" Binding="{Binding ohs_number}" Width="*" />
                    <DataGridTextColumn Header="ISG No" Binding="{Binding isg_number}" Width="*" />
                    <DataGridTextColumn Header="SSG No" Binding="{Binding ssg_number}" Width="*" />
                    <DataGridTextColumn Header="Part No" Binding="{Binding part_number}" Width="*" />
                    <DataGridTextColumn Header="Nomenclature" Binding="{Binding nomenclature}" Width="2*" />
                    <DataGridTextColumn Header="A/U" Binding="{Binding a_u}" Width="Auto" />
                    <DataGridTextColumn Header="No Off" Binding="{Binding no_off}" Width="Auto" />
                    <DataGridTextColumn Header="Scl Auth" Binding="{Binding scl_auth}" Width="Auto" />
                    <DataGridTextColumn Header="Unsv Stock" Binding="{Binding unsv_stock}" Width="Auto" />
                    <DataGridTextColumn Header="Rep Stock" Binding="{Binding rep_stock}" Width="Auto" />
                    <DataGridTextColumn Header="Serv Stock" Binding="{Binding serv_stock}" Width="Auto" />
                    <DataGridTextColumn Header="MSC" Binding="{Binding msc}" Width="Auto" />
                    <DataGridTextColumn Header="VED" Binding="{Binding ved}" Width="Auto" />
                    <DataGridTextColumn Header="In-House" Binding="{Binding in_house}" Width="Auto" />
                    <DataGridTextColumn Header="Bin No" Binding="{Binding bin_number}" Width="Auto" />
                    <DataGridTextColumn Header="Group" Binding="{Binding group}" Width="*" />
                    <DataGridTextColumn Header="CDS Unsv" Binding="{Binding cds_unsv_stock}" Width="Auto" />
                    <DataGridTextColumn Header="CDS Rep" Binding="{Binding cds_rep_stock}" Width="Auto" />
                    <DataGridTextColumn Header="CDS Serv" Binding="{Binding cds_serv_stock}" Width="Auto" />
                    <DataGridTextColumn Header="LPP" Binding="{Binding lpp}" Width="Auto" />
                    <DataGridTextColumn Header="Rate" Binding="{Binding rate}" Width="Auto" />
                    <DataGridTextColumn Header="Remarks" Binding="{Binding rmks}" Width="*" />
                    <DataGridTextColumn Header="LPP Date" Binding="{Binding lpp_dt}" Width="Auto" />
                </DataGrid.Columns>
            </DataGrid>


        </ScrollViewer>
        <!-- FOOTER BUTTONS -->
        <Grid Grid.Row="3" Grid.Column="0"  Background="#F5F5F5" Grid.ColumnSpan="99">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT BUTTONS -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="60,0,0,0" >
                <Button Content="Update Page" Width="120" Height="40" Margin="10" Style="{DynamicResource LedgerButtonStyle}" Click="Update_Click"/>
                <Button x:Name="Add"  Content="Add Page" Height="40"  Width="120" Margin="10" Style="{DynamicResource LedgerButtonStyle}" Click="Add_Click"/>
                <Button Content="Export To Excel" Width="120" Height="40"  Margin="10" Style="{DynamicResource LedgerButtonStyle}" Click="ExportToXlsx_Click"/>
                <Button Content="Current Stock" Width="120 " Height="40"  Margin="10" Style="{DynamicResource LedgerButtonStyle}" />
                <Button x:Name="Reports" Content="Reports" Height="40"  Width="120" Margin="10" Style="{DynamicResource LedgerButtonStyle}" Click="Reports_Click"/> 
            </StackPanel>

            <!-- ALERT BUTTON (RIGHT SIDE) -->
            <Button Content="Alert" Height="40" Width="120" Margin="5,10,20,10"
            Grid.Column="1"
            Background="#FF5A5A" Foreground="White" Style="{DynamicResource LedgerButtonStyle}" />

        </Grid>

    </Grid>
</Page>
