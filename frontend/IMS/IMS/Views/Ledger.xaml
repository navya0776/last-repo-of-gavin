<Page x:Class="IMS.Views.Ledger"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ledger">
    <Grid Background="#E5E5E5" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <!-- Stores Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Ledger Main Area -->
        </Grid.ColumnDefinitions>

        <!-- Main Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Table -->
            <RowDefinition Height="40"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- LEFT SIDEBAR: Stores -->


            <!-- Example store buttons -->
            <TreeView x:Name="StoresTree" SelectedItemChanged="StoresTree_SelectedItemChanged"/>

            <!-- HEADER -->
        <DockPanel Grid.Row="0" Background="#ffffff" LastChildFill="True" Grid.ColumnSpan="99"  >
            <TextBlock Text="LEDGER MAINTAINANCE"
                   Foreground="Black"
                   FontWeight="Bold"
                   FontSize="18"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"/>

            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
                <!-- Column dropdown -->
                <ComboBox x:Name="ColumnSelector"
              Width="120"
              Margin="0,0,10,0" 
             SelectionChanged="ColumnSelector_SelectionChanged"/>

                <!-- Search textbox -->
                <TextBox x:Name="SearchBox"
             Width="150"
             Margin="0,0,10,0"
              />

                <!-- Search button -->
                <Button Content="Search" Margin="0,0,0,0"
            Width="80"
            Click="Search_Click" Style="{DynamicResource SearchButtonStyle}"
             />

                <!-- Clear button -->
                <Button Content="Clear"
            Width="80"
            Margin="10,0,0,0"
            Click="Clear_Click" Style="{DynamicResource SearchButtonStyle}"/>
            </StackPanel>



        </DockPanel>


        <!-- DATA GRID (AUTO WIDTH COLUMNS) -->
        <DataGrid Grid.Row="1" Grid.Column="1"
          Name="LedgerDataGrid"
          AutoGenerateColumns="False"
          HeadersVisibility="Column"
          ColumnWidth="*">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FFD477"/>
                    <Setter Property="Foreground" Value="black"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridColumnHeader">
                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="6">
                                    <TextBlock Text="{TemplateBinding Content}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>


            <DataGrid.Columns >
                <DataGridTextColumn Header="Ledger Page" Binding="{Binding LedgerPage}" Width="*" />
                <DataGridTextColumn Header="OHS No" Binding="{Binding OHSNo}" Width="*" />
                <DataGridTextColumn Header="ISG No" Binding="{Binding ISGNo}" Width="*" />
                <DataGridTextColumn Header="SSG No" Binding="{Binding SSGNo}" Width="*" />
                <DataGridTextColumn Header="Part No" Binding="{Binding PartNo}" Width="*" />
                <DataGridTextColumn Header="Nomen" Binding="{Binding Nomen}" Width="2*" />
                <DataGridTextColumn Header="A_U" Binding="{Binding AU}" Width="*" />
                <DataGridTextColumn Header="No Off" Binding="{Binding NoOff}" Width="*" />
                <DataGridTextColumn Header="Scl Auth" Binding="{Binding SclAuth}" Width="*" />
                <DataGridTextColumn Header="Unsv Stock" Binding="{Binding UnsvStock}" Width="*" />
                <DataGridTextColumn Header="Rep Stock" Binding="{Binding RepStock}" Width="*" />
                <DataGridTextColumn Header="Serv Stock" Binding="{Binding ServStock}" Width="*" />
                <DataGridTextColumn Header="MSC" Binding="{Binding MSC}" Width="*" />
                <DataGridTextColumn Header="Group" Binding="{Binding Group}" Width="*" />
                <DataGridTextColumn Header="CDC" Binding="{Binding CDC}" Width="*" />
    
            </DataGrid.Columns>

        </DataGrid>

        <!-- FOOTER BUTTONS -->
        <Grid Grid.Row="2" Background="#F5F5F5" Grid.ColumnSpan="99">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT BUTTONS -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="60,0,0,0" >
                <Button Content="Update Page" Width="80" Margin="5" Style="{DynamicResource LedgerButtonStyle}" Click="Update_Click"/>
                <Button x:Name="Add"  Content="Add Page" Width="80" Margin="5" Style="{DynamicResource LedgerButtonStyle}" Click="Add_Click"/>
                <Button Content="Export To Excel" Width="100" Margin="5" Style="{DynamicResource LedgerButtonStyle}" Click="ExportToXlsx_Click"/>
                <Button Content="Current Stock" Width="100" Margin="5" Style="{DynamicResource LedgerButtonStyle}" />
                <Button x:Name="Reports" Content="Reports" Width="80" Margin="5" Style="{DynamicResource LedgerButtonStyle}" Click="Reports_Click"/> 
            </StackPanel>

            <!-- ALERT BUTTON (RIGHT SIDE) -->
            <Button Content="Alert" Width="100" Margin="5,5,20,5"
            Grid.Column="1"
            Background="#FF5A5A" Foreground="White" Style="{DynamicResource LedgerButtonStyle}" />

        </Grid>


        <!-- OVERLAY FORM FOR Updating LEDGER ENTRY -->
        <Grid x:Name="FormOverlay" Background="#AA000000" Visibility="Collapsed" Panel.ZIndex="999" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.RowSpan="999" Grid.Column="1" Grid.Row="1">
            <Border Background="#86B9F7" CornerRadius="10" Padding="20" Width="900" VerticalAlignment="Center" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ********** COMPULSORY SECTION ********** -->
                    <StackPanel Grid.Row="0" >
                        <TextBlock Text="Compulsory" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <!-- Row 1 -->
                            <TextBlock Text="Ledger Page" Grid.Row="0" Grid.Column="0"/>
                            <TextBox x:Name="LedgerPage" Grid.Row="0" Grid.Column="0" Margin="100,0,0,5"/>

                            <TextBlock Text="OHS No" Grid.Row="0" Grid.Column="1"/>
                            <TextBox x:Name="OHSNo" Grid.Row="0" Grid.Column="1" Margin="60,0,0,5"/>

                            <TextBlock Text="ISG No" Grid.Row="0" Grid.Column="2"/>
                            <TextBox x:Name="ISGNo" Grid.Row="0" Grid.Column="2" Margin="60,0,0,5"/>

                            <TextBlock Text="SSG No" Grid.Row="0" Grid.Column="3"/>
                            <TextBox x:Name="SSGNo" Grid.Row="0" Grid.Column="3" Margin="60,0,0,5"/>

                            <!-- Row 2 -->
                            <TextBlock Text="Part No" Grid.Row="1" Grid.Column="0"/>
                            <TextBox x:Name="PartNo" Grid.Row="1" Grid.Column="0" Margin="100,0,0,5"/>

                            <TextBlock Text="In Lieu Part" Grid.Row="1" Grid.Column="1"/>
                            <TextBox x:Name="InLieuPart" Grid.Row="1" Grid.Column="1" Margin="60,0,0,5"/>

                            <TextBlock Text="A-U" Grid.Row="1" Grid.Column="2"/>
                            <TextBox x:Name="AU" Grid.Row="1" Grid.Column="2" Margin="60,0,0,5"/>

                            <TextBlock Text="COS Sec" Grid.Row="1" Grid.Column="3"/>
                            <TextBox x:Name="COSSec" Grid.Row="1" Grid.Column="3" Margin="60,0,0,5"/>

                            <!-- Row 3 -->
                            <TextBlock Text="Nomen" Grid.Row="2" Grid.Column="0"/>
                            <TextBox x:Name="Nomen" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="100,0,0,5"/>

                            <TextBlock Text="Cab No" Grid.Row="2" Grid.Column="3"/>
                            <TextBox x:Name="CabNo" Grid.Row="2" Grid.Column="3" Margin="60,0,0,5"/>

                            <!-- Row 4 -->
                            <TextBlock Text="Item Group" Grid.Row="3" Grid.Column="0"/>
                            <TextBox x:Name="ItemGroup" Grid.Row="3" Grid.Column="0" Margin="150,0,0,5"/>
                            
                            <TextBlock Text="No Off" Grid.Row="3" Grid.Column="0"/>
                            <TextBox x:Name="NoOff" Grid.Row="3" Grid.Column="1" Margin="150,0,0,5"/>

                            <TextBlock Text="Auth In Scale" Grid.Row="3" Grid.Column="1"/>
                            <TextBox x:Name="AuthScale" Grid.Row="3" Grid.Column="2" Margin="60,0,0,5"/>

                            <TextBlock Text="Bin No" Grid.Row="3" Grid.Column="2"/>
                            <TextBox x:Name="BinNo" Grid.Row="3" Grid.Column="3" Margin="60,0,0,5"/>
                        </Grid>
                    </StackPanel>

                    <!-- ********** OPTIONAL SECTION ********** -->
                    <StackPanel Grid.Row="1" Margin="0 20 0 0">
                        <TextBlock Text="Optional" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Serv Stock" Grid.Row="0" Grid.Column="0"/>
                            <TextBox x:Name="ServStock" Grid.Row="0" Grid.Column="0" Margin="100,0,0,5"/>

                            <TextBlock Text="Stc Date" Grid.Row="0" Grid.Column="1"/>
                            <TextBox x:Name="StcDate" Grid.Row="0" Grid.Column="1" Margin="60,0,0,5"/>

                            <TextBlock Text="Old Page Ref" Grid.Row="0" Grid.Column="2"/>
                            <TextBox x:Name="OldPageRef" Grid.Row="0" Grid.Column="2" Margin="80,0,0,5"/>

                            <TextBlock Text="Assy/Component" Grid.Row="0" Grid.Column="3"/>
                            <TextBox x:Name="AssyComponent" Grid.Row="0" Grid.Column="3" Margin="110,0,0,5"/>

                            <TextBlock Text="Rep Stock" Grid.Row="1" Grid.Column="0"/>
                            <TextBox x:Name="RepStock" Grid.Row="1" Grid.Column="0" Margin="100,0,0,5"/>

                            <TextBlock Text="Re Ord Level" Grid.Row="1" Grid.Column="1"/>
                            <TextBox x:Name="ReOrdLevel" Grid.Row="1" Grid.Column="1" Margin="80,0,0,5"/>

                            <TextBlock Text="Safety Stock" Grid.Row="1" Grid.Column="2"/>
                            <TextBox x:Name="SafetyStock" Grid.Row="1" Grid.Column="2" Margin="90,0,0,5"/>

                            <TextBlock Text="Remarks" Grid.Row="1" Grid.Column="3"/>
                            <TextBox x:Name="Remarks" Grid.Row="1" Grid.Column="3" Margin="80,0,0,5"/>
                            
                            <TextBlock Text="UnServ Stock" Grid.Row="0" Grid.Column="0"/>
                            <TextBox x:Name="UnsvStock" Grid.Row="2" Grid.Column="0" Margin="100,0,0,5"/>

                            <TextBlock Text="SCL Auth" Grid.Row="0" Grid.Column="0"/>
                            <TextBox x:Name="SclAuth" Grid.Row="2" Grid.Column="1" Margin="100,0,0,5"/>

                            <TextBlock Text="MSC" Grid.Row="0" Grid.Column="0"/>
                            <TextBox x:Name="MSC" Grid.Row="2" Grid.Column="2" Margin="100,0,0,5"/>

                            <TextBlock Text="Group" Grid.Row="0" Grid.Column="0"/>
                            <TextBox x:Name="Group" Grid.Row="2" Grid.Column="2" Margin="100,0,0,5"/>
                            
                            

                        </Grid>

                        <!-- ADD BUTTON -->
                        <Button Content="Ok" Width="120" HorizontalAlignment="Right" Margin="0 20 0 0" Click="OK_Click" />
                    </StackPanel>

                </Grid>
            </Border>
        </Grid>

    </Grid>
</Page>
