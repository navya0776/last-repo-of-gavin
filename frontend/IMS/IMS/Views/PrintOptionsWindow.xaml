<Window x:Class="IMS.Views.PrintOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print Options"
        Height="260" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Print Options"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Orientation:" Width="90" VerticalAlignment="Center"/>
                <ComboBox x:Name="OrientationCombo" Width="200">
                    <ComboBoxItem Content="Portrait"/>
                    <ComboBoxItem Content="Landscape"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Paper Size:" Width="90" VerticalAlignment="Center"/>
                <ComboBox x:Name="PaperSizeCombo" Width="200">
                    <ComboBoxItem Content="A4"/>
                    <ComboBoxItem Content="A3"/>
                    <ComboBoxItem Content="Letter"/>
                </ComboBox>
            </StackPanel>

            <CheckBox x:Name="FitWidthCheck"
                      Content="Fit columns to page width"
                      Margin="0,10,0,2"/>

            <CheckBox x:Name="FitHeightCheck"
                      Content="Fit rows to page height"
                      Margin="0,2,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Print"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="Print_Click"/>
            <Button Content="Cancel"
                    Width="80"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
