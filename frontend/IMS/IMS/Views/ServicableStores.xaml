<Page x:Class="IMS.Views.ServicableStores"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicableStores">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Border Grid.Column="0" BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Padding="10" Margin="5">
            <DockPanel>
                <TextBlock Text="Equipments" FontSize="28" FontWeight="Bold" Margin="0,0,0,10" DockPanel.Dock="Top"/>
                <ListBox x:Name="EquipmentsList" />
            </DockPanel>
        </Border>
        <DataGrid Grid.Column="1"
                  x:Name="StoresDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Dem No" Binding="{Binding DemNo}" Width="55"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="120"/>
                <DataGridTextColumn Header="Fin Year" Binding="{Binding FinYear}" Width="100"/>
                <DataGridTextColumn Header="Equipment" Binding="{Binding Equipment}" Width="150"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Filter" Width="70" Margin="10,0,10,0" />
            <Button Content="Print Report" Width="100" Margin="0,0,10,0" />
            <Button Content="Close" Width="70" />
        
        </StackPanel>
    </Grid>
</Page>
