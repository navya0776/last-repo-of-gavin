<Page x:Class="IMS.Views.AddEqpt"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEqpt">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="DeepSkyBlue" >
            <TextBlock Text="Equipment Name" VerticalAlignment="Center" Margin="10,0,10,0" />
            <TextBox x:Name="EquipmentNameTextBox" Width="250" Height="30"/>
            <TextBlock Text="Database" VerticalAlignment="Center" Margin="10,0,10,0" />
            <TextBox x:Name="DatabaseTextBox" Width="100" Height="30"/>
            <TextBlock Text="Group" VerticalAlignment="Center" Margin="10,0,10,0" />
            <TextBox x:Name="GroupTextBox" Width="100" Height="30"/>
        </StackPanel>
        <DataGrid x:Name="EquipmentDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Equipment Code" Binding="{Binding eqpt_code}" Width="*"/>
                <DataGridTextColumn Header="Eqpt Code" Binding="{Binding ledger_code}" Width="*"/>
                <DataGridTextColumn Header="Ledger" Binding="{Binding ledger_name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="2" >
            <TextBlock Text="Ledger" VerticalAlignment="Center" Margin="10,0,10,0" />
            <TextBox x:Name="LedgerTextBox" Width="100" Height="30"/>
            <Button x:Name="save" Content="Save" Width="75" Margin="10" Style="{DynamicResource LedgerButtonStyle}"/>
            <Button x:Name="cancel" Content="Cancel" Width="75" Margin="10" Style="{DynamicResource LedgerButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>
