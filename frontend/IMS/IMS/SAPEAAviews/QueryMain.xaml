<Page x:Class="IMS.SAPEAAviews.QueryMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMS.SAPEAAviews"
      mc:Ignorable="d">

    <Page.Resources>

        <!-- Colors -->
        <SolidColorBrush x:Key="TealDark" Color="#1E6B83"/>
        <SolidColorBrush x:Key="Teal" Color="#05B5A8"/>
        <SolidColorBrush x:Key="Orange" Color="#E96C5F"/>

        <!-- Modern Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#05B5A8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15 8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="BorderBrush" Value="#05B5A8"/>
            <Setter Property="BorderThickness" Value="1"/>
   
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" Opacity="0.25"/>
                </Setter.Value>
            </Setter>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#038E82"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#026D66"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid>

        <!-- Background Gradient -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#CDEBFF" Offset="0"/>
                    <GradientStop Color="#8AD4E6" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Background Logo Pattern -->
        <Rectangle Opacity="0.10">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Assets/SAPEAA.png"
                            TileMode="Tile"
                            Stretch="None"
                            Viewport="0,0,170,170"
                            ViewportUnits="Absolute"/>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Main Layout -->
        <Grid Margin="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Background="White" Grid.Row="0" Padding="20" 
                    >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Center Title -->
                    <TextBlock Text="Query Panel"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="30"
                               FontWeight="Bold"
                               Foreground="#1E6B83"/>

                    <!-- User Badge -->
                    <Border Grid.Column="1" Background="#E96C5F" 
                            CornerRadius="20" Padding="6 2" Margin="0,0,20,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="26" Height="26"
                                    CornerRadius="13"
                                    Background="White"
                                    BorderBrush="#E96C5F"
                                    BorderThickness="2"
                                    Margin="0,0,6,0">
                                <Image Source="/Assets/user.png" Width="14" Height="14" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>

                            <TextBlock Text="MT" Foreground="White" FontSize="15"
                                       FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- MAIN CARD -->
            <Grid Grid.Row="1" Margin="120 40 120 40">
                <Border Background="White"
                        CornerRadius="25"
                        Padding="40"
                       >

                    <StackPanel HorizontalAlignment="Center">

                        <!-- Title -->
                        <TextBlock FontSize="38" FontWeight="Bold" Margin="0 0 0 30">
                            <Run Text="Orders" Foreground="#E96C5F"/>
                        </TextBlock>

                        <!-- Row 1 Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource ActionButton}" Content="LPR(O)"/>
                            <Button Style="{StaticResource ActionButton}" Content="LPR(C)"/>
                            <Button Style="{StaticResource ActionButton}" Content="MKT"/>
                        </StackPanel>

                        <!-- Row 2 Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource ActionButton}" Content="Jobs"/>
                            <Button Style="{StaticResource ActionButton}" Content="Short Order"/>
                            <Button Style="{StaticResource ActionButton}" Content="Indent"/>
                        </StackPanel>

                        <!-- Row 3 Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                            <Button Style="{StaticResource ActionButton}" Content="Insp NOte"/>
                            <Button Style="{StaticResource ActionButton}" Content="Challan"/>
                            <Button Style="{StaticResource ActionButton}" Content="GEM"/>
                        </StackPanel>

                        <!-- Row 4 Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Style="{StaticResource ActionButton}" Content="GFR"/>
                            <Button Style="{StaticResource ActionButton}" Content="Vendor"/>
                            <Button Style="{StaticResource ActionButton}" Content="Item"/>
                        </StackPanel>

                    </StackPanel>

                </Border>
            </Grid>

        </Grid>
    </Grid>
</Page>
